@model IEnumerable<ODHDEVELOPERS.Models.appltab>
@using ODHDEVELOPERS.Models
@{
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    Layout = "~/Views/Shared/_AgentLayout.cshtml";
    ViewBag.Title = "Bond";
    var a = 0;
}

<div class="page-content">

                <div class="container" id="div1">

<div class="page-toolbar">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">@mr.custname Detail</div>
                            <div class="page-toolbar-subtitle"> </div>
                        </div>
                               <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
                                <div >                                            
                                <label>@Convert.ToDateTime(DateTime.Now.Date).ToString("dd/MM/yyyy")</label>
                                </div>                            
                            </div>
                        </div>   
                      
                    </div> 

                   
          
<table border="1" style="margin-left:15px;" id="tab1">
    @foreach(var item in Model){
if(a==0)
{
     <tr><td colspan="9" style="width:100%;"><a href="@Url.Action("PrintOfficialCustomerReport")" target="_blank">Get Report In PDF</a></td></tr>
    <tr>
        <th style="width:5%;">
           <label id="sn"><b>S.N.</b></label>
            </th>
        <th style="width:13%;">
           <label id="NewAgentId"><b>@mr.custname Id</b></label>
            </th>
        
        <th style="width:17%;">
           <label id="name"><b>Name</b></label>
        </th>
            
        <th style="width:10%;">
           <label id="BranchCode"><b>@mr.planname</b></label>
        </th>
            
        <th style="width:10%;">
            <label id="Mobile" ><b>Total Amount</b></label>
        </th>
             
         <th style="width:10%;">
           <label id="RankCode"><b>Maturity Amount</b></label>
        </th>
      
              <th style="width:13%;">
            <label id="introid" ><b>Introducer Id</b></label>
        </th>
             
         <th style="width:11%;">
           <label id="doj"><b>Joining Date</b></label>
        </th>
            
        <th style="width:11%;">
            <label id="edate" ><b>Expiry Date</b></label>
        </th>

    </tr>
    }
        a = a + 1;
    <tr>
        <td>
            @a
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.newbondid)
        </td>
        
      <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        
         <td>
            @Html.DisplayFor(modelItem => item.planname)
        </td>
       
         <td>
            @Html.DisplayFor(modelItem => item.totalcon)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.expectedraisablevalue)
        </td>
       
      
         <td>
            @Html.DisplayFor(modelItem => item.newintroducerid)
        </td>
        
        <td>
            @Convert.ToDateTime(item.formdate).ToString("dd/MM/yyyy")
        </td>
       
        <td>
            @Convert.ToDateTime(item.expirydate).ToString("dd/MM/yyyy")
        </td>   
    </tr>
} 
   
</table>
                  
                    </div>

</div>









