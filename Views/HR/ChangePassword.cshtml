@{
    Layout = "~/Views/Shared/_HRLayout.cshtml";
    ViewBag.Title = "ChangePassword";
}

@using (@Html.BeginForm()){
   
    <div class="page-content">

                <div class="container">
                   <div class="page-toolbar">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Change Password</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                              <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
                                <div >                                            
                                <label> @Convert.ToDateTime(DateTime.Now.Date).ToString("dd/MM/yyyy")</label>
                                </div>                            
                            </div>
                        </div>  
                              
                        
                    </div>

  <div class="row" >
                        <div class="col-md-6" style="width:100%">
                            
                            <div class="block" >
                               
                                <div class="block-content controls">
                                      
                                   
                                   <div class="row-form">
                    <div class="input-group" style="margin-left:1%;margin-right:1%;">
                        <span class="input-group-addon"><label class="width"> Old Password</label></span>
                    <input type="Password" id="oldpwd" class="form-control" name="Password" required>
                         
                </div>
    </div>
                                   
                                   <div class="row-form">
                   <div class="input-group" style="margin-left:1%;margin-right:1%;">
                        <span class="input-group-addon"><label class="width"> New Password</label></span>
                    <input type="Password" id="newpwd" class="form-control" name="NewPassword" required>
                      
                       </div>
                </div>
                                  
                     
                                    <div class="row-form">
                    <div class="input-group" style="margin-left:1%;margin-right:1%;">
                        <span class="input-group-addon"><label class="width">Confirm Password</label></span>
                    <input type="Password" id="cpwd"  class="form-control " name="ConfirmPassword" required>
                       
    </div>
                </div>
                                  
                    
                                       <div class="row-form" style="width:100%">
      <div class="col-md-9">
                     <button id="submit" class="btn btn-primary pull-Left" type="submit" >Change Password</button>
     </div>
              </div>
   
   <h4 style="margin-left:15px;">@ViewBag.msg</h4>
             
        </div>
        </div>
                             </div>
        </div>
                     </div>
        </div>
      
}


