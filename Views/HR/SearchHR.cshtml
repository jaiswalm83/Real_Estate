@model IEnumerable<ODHDEVELOPERS.Models.Emp_Reg>

    @{
        Layout = "~/Views/Shared/_HRLayout.cshtml";
        ViewBag.Title = "SearchHR";
    }
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <script src="~/Scripts/print.js" type="text/javascript"></script>
    <div class="page-content">
        <!-- Improved Print Button -->
        <div class="d-flex justify-content-between align-items-center mt-3 mb-4">
            <button class="btn btn-primary px-4 py-2" onclick="PrintMe('divid')">
                <i class="fas fa-print"></i> Print Employee List
            </button>
            <div>
                <!-- Improved Date Display -->
                <span class="badge bg-info text-white px-3 py-2" style="font-size: 1rem;">
                    Date: @DateTime.Now.ToString("dddd, dd MMMM yyyy")
                </span>
            </div>
        </div>

        <div class="container mt-4 FormContainer" id="divid">
            <h2 class="text-center mb-4">Employee List</h2>

            <div class="index_body mt-5">
                <div class="table-container">
                    <div class="header-row">Total Holiday Leave</div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width:5%; text-align:center;">S.N.</th>
                                <th style="width:10%; text-align:center;">Employee ID</th>
                                <th style="width:10%; text-align:center;">Name</th>
                                <th style="width:10%; text-align:center;">Branch Code</th>
                                <th style="width:10%; text-align:center;">Department</th>
                                <th style="width:10%; text-align:center;">Designation</th>
                                <th style="width:5%; text-align:center;">Basic Salary</th>
                                <th style="width:10%; text-align:center;">Mobile</th>
                                <th style="width:10%; text-align:center;">Address</th>
                                <th style="width:10%; text-align:center;">E-Mail</th>
                                <th style="width:10%; text-align:center;">Date of Joining</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                var index = 1;
                                foreach (var item in Model)
                                {
                                    <tr style="text-align:center;">
                                        <td>@index</td>
                                        <td>@Html.DisplayFor(modelItem => item.empid)</td>
                                        <td>@Html.DisplayFor(modelItem => item.name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.branchcode)</td>
                                        <td>@Html.DisplayFor(modelItem => item.department)</td>
                                        <td>@Html.DisplayFor(modelItem => item.designation)</td>
                                        <td>@Html.DisplayFor(modelItem => item.basicsalary)</td>
                                        <td>@Html.DisplayFor(modelItem => item.mob)</td>
                                        <td>@Html.DisplayFor(modelItem => item.address)</td>
                                        <td>@Html.DisplayFor(modelItem => item.email)</td>
                                        <td>@item.doj.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                    index++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="11" class="text-center">No records found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
