     @using (Html.BeginForm())
  {

                       <div class="row" >
                        <div class="col-md-6" style="width:100%">
                            
                            <div class="block" >
                               
                                <div class="block-content controls" >


                                    <div class="row-form"  >
                                    
                                  <div class="col-md-9">


                                       <div class="input-group">
                                            <span class="input-group-addon"><label class="width">Salary Year</label></span>
                                             <input type="text"  required  name="year"  class="form-control" >
                                                </div>
                                    
                                
                                      </div>
                                            </div>




                                 


                                        </div>
                                    </div>
                               
                                  

                                       <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
                                                          
                                <button name="submitbtn" type="submit" class="btn btn-primary"> View</button>                            
                               
                            </div>
                        </div>
                                             
                                    
                                      <p>@ViewBag.msg</p> 
                                </div>
                                
                            </div>
                        
                        
  }
    
    
    @if (Convert.ToInt32(ViewData["count"])>0)
    {
        
    <div id="divid">  
     <div style="background-color:#61708f;color:white; font-size:large;text-align:center"><b>&nbsp;Employee Salary List</b> </div><br/><br/>                                               
 
     
                              
<table border="1" style="margin-left:1%; margin-right:1%; margin-bottom:30px; width:98%">
   
    @foreach (var item in Model)
    {
        if (a == 0)
        {
  <tr>
        <th style="width:5%;text-align:center;">
           <label id="sn"><b>S.N.</b></label>
            </th>
        <th style="width:10%;text-align:center;">
           <label id="EmployeeId"><b>Employee Id</b></label>
            </th>
        
        <th style="width:10%;text-align:center;">
           <label id="EmployeeName"><b>Name</b></label>
        </th>
            
        <th style="width:10%;text-align:center;">
           <label id="BranchCode"><b>Designation</b></label>
        </th>
      <th style="width:10%;text-align:center;">
           <label id="Department"><b>Department</b></label>
            </th>
        
        <th style="width:10%;text-align:center;">
           <label id="Designation"><b>Basic Salary</b></label>
        </th>
            
        <th style="width:5%;text-align:center;">
           <label id="bs"><b>Net Salary</b></label>
        </th>
            
      


      

      <th style="width:10%;text-align:center;">
           <label ><b>Date</b></label>
        </th>


      

      <th style="width:10%;text-align:center;">
           <label ><b>Month</b></label>
        </th>
      <th style="width:10%;text-align:center;">
           <label ><b>Year</b></label>
        </th>
    </tr>
        }

        a = a + 1;
    <tr style="text-align:center;">
        <td>
            @a
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.empid)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.designation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.department)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.basicsalary)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.netsalary)
        </td>
       
     
        <td>
             @Convert.ToDateTime(item.date).ToString("dd/MM/yyyy")
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.month)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.year)
        </td>

    </tr>
    } 

</table>
