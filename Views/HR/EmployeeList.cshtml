@model IEnumerable<ODHDEVELOPERS.Models.Emp_Reg>
    @using ODHDEVELOPERS.Models;
    @{
        UsersContext db = new UsersContext();
        var mr = db.Members.Single(m => m.Id == 1);
        Layout = "~/Views/Shared/_HRLayout.cshtml";
        ViewBag.Title = "EmployeeList";
        var a = 0;
        var list = db.Emp_Regs.Where(x => x.status == 1).ToList();
    }
    <script src="~/Scripts/print.js" type="text/javascript"></script>
    <div class="page-content">
        <div>
            <input type="button" style="margin-left:10px;margin-top:10px;margin-bottom:10px;" name="btnprint" value="Print" onclick="PrintMe('divid')" />
        </div>
        <div class="container" id="divid">

            <div class="page-toolbar">

                <div class="page-toolbar-block">
                    <div class="page-toolbar-title">Employee List</div>
                    <div class="page-toolbar-subtitle"> </div>
                </div>
                <div class="page-toolbar-block pull-right">
                    <div class="widget-info widget-from">
                        <div>
                            <label> @Convert.ToDateTime(DateTime.Now.Date).ToString("dd/MM/yyyy")</label>
                        </div>
                    </div>
                </div>

                <table border="1" style="margin-left:1%; margin-right:1%; margin-bottom:30px; width:98%">

                    @foreach (var item in list)
                    {
                        if (a == 0)
                        {
                            <tr>
                                <th style="width:5%;text-align:center;">
                                    <label id="sn"><b>S.N.</b></label>
                                </th>
                                <th style="width:10%;text-align:center;">
                                    <label id="EmployeeId"><b>Employee Id</b></label>
                                </th>

                                <th style="width:10%;text-align:center;">
                                    <label id="EmployeeName"><b>Name</b></label>
                                </th>

                                <th style="width:10%;text-align:center;">
                                    <label id="BranchCode"><b>@mr.branchname Code</b></label>
                                </th>
                                <th style="width:10%;text-align:center;">
                                    <label id="Department"><b>Department</b></label>
                                </th>

                                <th style="width:10%;text-align:center;">
                                    <label id="Designation"><b>Designation</b></label>
                                </th>

                                <th style="width:5%;text-align:center;">
                                    <label id="bs"><b>Basic Salary</b></label>
                                </th>

                                <th style="width:10%;text-align:center;">
                                    <label id="EmployeeMobile"><b> Mobile</b></label>
                                </th>

                                <th style="width:10%;text-align:center;">
                                    <label id="EmployeeAddress"><b> Address</b></label>
                                </th>
                                <th style="width:10%;text-align:center;">
                                    <label id="Employee_Mail"><b>E-Mail</b></label>
                                </th>
                                <th style="width:10%;text-align:center;">
                                    <label id="Cdate"><b>Registration Date</b></label>
                                </th>
                                <th style="width:10%;text-align:center;">
                                    <label id=""><b>Date of Joining</b></label>
                                </th>
                            </tr>
                        }

                        a = a + 1;
                        <tr style="text-align:center;">
                            <td>
                                @a
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.empid)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.branchcode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.department)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.designation)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.basicsalary)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.mob)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <td>
                                @Convert.ToDateTime(item.registerdate).ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @Convert.ToDateTime(item.doj).ToString("dd/MM/yyyy")
                            </td>
                        </tr>
                    }

                </table>
            </div>





        </div>


    </div>

