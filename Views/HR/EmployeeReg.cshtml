
@model ODHDEVELOPERS.Models.Emp_Reg
@using ODHDEVELOPERS.Models;
@{
    UsersContext db = new UsersContext();
    var br = db.HRTabs.Single(o => o.HRId == User.Identity.Name);
    Layout = "~/Views/Shared/_HRLayout.cshtml";
    ViewBag.Title = "EmployeeReg";


    long i = 1;
    foreach (byte b in Guid.NewGuid().ToByteArray())
    {

        i *= ((int)b + 1);
    }


    if (i < 0)
    {
        i = -i;
    }
    string s = i.ToString();
    var employeid = "EMP" + s.Substring(0, 6);

}







<div class="container mt-5 FormContainer">
    <h2 class="text-center mb-4">Associate Advance Payment</h2>
    <form action="/HR/EmployeeReg" method="post" enctype="multipart/form-data" class="border p-4 rounded shadow formtag">
        <!-- Associate ID -->
        <div class="mb-3">
            <label class="form-label formLabel">Branch Code</label>
            <input type="text" value="@br.BranchCode" name="branchcode" readonly="true" class="form-control formInput">
        </div>


        <!-- Associate ID -->
        <div class="mb-3">
            <label class="form-label formLabel">Employee ID</label>
            <input type="text" required name="empid" value="@employeid" class="form-control formInput">
        </div>


        <!-- Associate ID -->
        <div class="mb-3">
            <label class="form-label formLabel">Full Name</label>
            <input type="text" id="IntroducerCode"  name="name" class="form-control formInput" required>
        </div>

        <!-- Associate ID -->
        <div class="mb-3">
            <label class="form-label formLabel">Father/Husband's Name</label>
            <input type="text" name="father" id="IntroName" class="form-control formInput" required>
        </div>


        <!-- Associate ID -->
        <div class="mb-3">
            <label class="form-label formLabel">Date Of Birth</label>
            <input type="date" name="dob" class="form-control formInput">
        </div>

        <!-- Associate ID -->
        <div class="mb-3">
            <label class="form-label formLabel">Date Of Joining</label>
            <input type="date" name="doj" class="form-control formInput">
        </div>

        <!-- Select section -->
        <div class="mb-3">
            <label class="form-label formLabel">Gender</label>
            <select class="form-control formInput" id="Select1" name="gender" required>
                <option value="" disabled selected>Select</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>

        <!-- Payment Amount with Increment/Decrement -->
        <div class="mb-3">
            <label class="form-label formLabel">Department</label>
            <input type="text" name="department" class="form-control formInput" required>
        </div>



        <!-- Associate ID -->
        <div class="mb-3">
            <label class="form-label formLabel">Designation</label>
            <input type="text" name="Designation" class="form-control formInput" required>
        </div>

        <!-- Associate ID -->
        <div class="mb-3">
            <label class="form-label formLabel">Basic Salary</label>
            <input type="number" name="basicsalary" class="form-control formInput" required>
        </div>

        <!-- Remark -->
        <div class="mb-3">
            <label for="remark" class="form-label formLabel">Mobile</label>
            <input type="tel" title="Invalid mobile format" pattern="[789][0-9]{9}" name="mob" maxlength="10" class="form-control formInput" required>
        </div>

        <!-- Associate ID -->
        <div class="mb-3">
            <label class="form-label formLabel">E-Mail ID</label>
            <input type="email" name="email" class="form-control formInput" required>
        </div>

        <!-- Associate ID -->
        <div class="mb-3">
            <label class="form-label formLabel">State</label>
            <input type="text" name="state" class="form-control formInput" required>
        </div>

        <!-- Associate ID -->
        <div class="mb-3">
            <label class="form-label formLabel">District</label>
            <input type="text" name="distict" class="form-control formInput" required>
        </div>

        <!-- Associate ID -->
        <div class="mb-3">
            <label class="form-label formLabel">Upload Images</label>
            <input type="file" id="filename1" value="Upload Picture" name="Photoimg" class="form-control formInput" required>
        </div>

        <!-- Associate ID -->
        <div class="mb-3">
            <label class="form-label formLabel">Upload CV</label>
            <input type="file" id="filename" value="Upload Picture" name="Photo" class="form-control formInput" required>
        </div>


        <!-- Submit Button -->
        <div class="text-center d-grid gap-2">
            <button name="submitbtn" type="submit" class="btn btn-lg formButtom">Register</button>
        </div>
    </form>

    <p>@ViewBag.msg</p>
</div>

<script>
    // Set the current date and time as the placeholder and value
    window.onload = function () {
        const dateInput = document.getElementById('date');
        const currentDate = new Date();

        // Format as per local date and time
        const formattedDate = currentDate.toLocaleString();

        // Set placeholder and value
        dateInput.placeholder = formattedDate;
        dateInput.value = formattedDate; // Optionally prefill the value
    };
</script>


