    <!-- Main Container -->
    <div class="container mt-5">
        <!-- First Row (Centered Cards with Responsive Behavior) -->
        <div class="centered-row">
            <!-- Card 1 (Plot Registry) -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-2 mb-3">
                @if (f1.status == 1)
                {

                    <a href="~/Admin/DCBrokerVoucher" class="custom-card text-center h-100">
                        <div class="card-body">
                            <img class="imageSize" src="~/Create_logos/property.png" />
                            <h6 class="card-title mt-3">@f1.type </h6>
                        </div>
                    </a>
                }
            </div>
            <!-- Card 2 (Pre Surrender) -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-2 mb-3">
                @if (f2.status == 1)
                {
                    <a href="~/Admin/CCBrokerVoucher" class="custom-card text-center h-100">
                        <div class="card-body">
                            <img class="imageSize" src="~/Create_logos/browsing.png" />
                            <h6 class="card-title mt-3">@f2.type</h6>
                        </div>
                    </a>
                }
            </div>

            <!-- Card 2 (Pre Surrender) -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-2 mb-3">
                @if (f3.status == 1)
                {
                    <a href="~/Admin/BWBrokerVoucher" class="custom-card text-center h-100">
                        <div class="card-body">
                            <img class="imageSize" src="~/Create_logos/browsing.png" />
                            <h6 class="card-title mt-3">@f3.type</h6>
                        </div>
                    </a>
                }
            </div>

            <!-- Card 2 (Pre Surrender) -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-2 mb-3">
             
                    <a href="~/Admin/ReleaseVoucher" class="custom-card text-center h-100">
