@model IEnumerable<ODHDEVELOPERS.Models.Branchtab>
    @using ODHDEVELOPERS.Models;
    @{
        UsersContext db = new UsersContext();
        var mr = db.Members.Single(m => m.Id == 1);
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
        ViewBag.Title = "BlockUnblockBranch";
        var a = 0;
    }
    <link href="~/assets/css1/main css/index.css" rel="stylesheet" />
   

    <div class="index_body">
        <div class="table-container">
            <div class="header-row">Block-UnBlock @mr.branchname</div>

            @*<div class="page-toolbar-block pull-right">
                <div class="widget-info widget-from">
                    <div>
                        <label>@DateTime.Now</label>
                    </div>
                </div>
            </div>*@


            <table>

                @foreach (var item in Model)
                {
                    if (a == 0)
                    {
                        <thead>
                            <tr>
                                <th>
                                    <label id="sn"><b>S.N.</b></label>
                                </th>
                                <th>
                                    <label id="BranchCode"><b>@mr.branchname Code</b></label>
                                </th>

                                <th>
                                    <label id="BranchName"><b>@mr.branchname Name</b></label>
                                </th>

                                <th>
                                    <label id="BranchDistrict"><b>@mr.branchname District</b></label>
                                </th>

                                <th>
                                    <label id="branchaddress"><b>@mr.branchname Address</b></label>
                                </th>


                                <th>
                                    <label id="mobile"><b>Mobile</b></label>
                                </th>
                                <th>
                                    <label id="Action"><b>Action</b></label>
                                </th>
                            </tr>
                        </thead>
                    }

                    a = a + 1;
                    <tbody>
                        <tr>
                            <td>
                                @a
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BranchCode)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.BranchName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.BranchDistrict)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.branchaddress)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.mobile)
                            </td>
                            @if (item.status == 1)
                            {
                                <td>

                                    @Html.ActionLink("Block", "BlockUnblockBranch", new { bid = item.BranchCode, status = 1 }, new { onclick = "return confirm('Are you sure to Block this " + mr.branchname + "?');" })
                                </td>
                            }
                            @if (item.status == 0)
                            {
                                <td>
                                    @Html.ActionLink("UnBlock", "BlockUnblockBranch", new { bid = item.BranchCode, status = 0 }, new { onclick = "return confirm('Are you sure to Unblock this " + mr.branchname + "?');" })
                                </td>
                            }
                        </tr>
                    </tbody>
                }

            </table>

        </div>


    </div>

