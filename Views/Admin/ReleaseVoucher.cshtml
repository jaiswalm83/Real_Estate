@model IEnumerable<ODHDEVELOPERS.Models.ReleaseTab>
@using ODHDEVELOPERS.Models;
@{
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "ReleaseVoucher";
    var a = 0;
    MonthName mn = new MonthName();
}


<link href="~/Content/datepicker/jquery.datepick.css" rel="stylesheet">
<script src="~/Content/datepicker/jquery.plugin.js"></script>
<script src="~/Content/datepicker/jquery.datepick.js"></script>
<script>
    $(function () {
        $('#pdate').datepick();

    });


</script>


<link rel="stylesheet" href="~/Content/jquery-ui.css" />

<script type="text/javascript" src="~/Scripts/autosearch.js"></script> 
<div class="page-content">

                <div class="container">

<div class="page-toolbar">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Enter Release Date</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                        
                        <div class="page-toolbar-block pull-right">
                           
                        </div>           
                        
                    </div> 


                     @using (Html.BeginForm())
                     {
                   
                       <div class="row" style="width:100%">
                        <div class="col-md-6" style="width:100%">
                            
                            <div class="block" style="width:100%">
                               
                                <div class="block-content controls">


                                     <div class="row-form">
           <div class="input-group" style="margin-left:1%;margin-right:1%;">
                        <span class="input-group-addon"><label class="width">Select Month</label></span>
                         <select class="form-control" id="month" name="month" required>
                                            <option selected>Select </option>
                                                  <option value="1">January</option>
                                                  <option value="2">February</option>
                                                  <option value="3">March</option>
                                                  <option value="4">April</option>
                                                  <option value="5">May</option>
                                                  <option value="6">June</option>
                                                  <option value="7">July</option>
                                                  <option value="8">August</option>
                                                  <option value="9">September</option>
                                                  <option value="10">October</option>
                                                  <option value="11">November</option>
                                                  <option value="12">December</option>
                                                

                                        </select>
                </div>   </div>

                                    <div class="row-form">
           <div class="input-group" style="margin-left:1%;margin-right:1%;">
                        <span class="input-group-addon"><label class="width">Select Year</label></span>
                         <select class="form-control" id="year" name="year" required>
                                            <option selected>Select </option>
                                                  <option>2013 </option>
                                                  <option>2014 </option>
                                                  <option>2015 </option>
                                                  <option>2016 </option>
                                                  <option>2017 </option>
                                                  <option>2018 </option>
                                                  <option>2019 </option>
                                                  <option>2020 </option>
                                                  <option>2021 </option>
                                                  <option>2022 </option>
                                                  
                                                

                                        </select>
                </div>   </div>

                                     <div class="row-form">
                                     
                                       <div class="input-group" style="margin-left:1%;margin-right:1%;">
                            <span class="input-group-addon"><label class="width">Enter Release Date</label></span>
                            <input type="text" id="pdate" name="paydate" class="form-control " required />
                                       </div>
                                       
                                    
                                 </div>
                                  
                                            <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
                                                          
                              <input type="submit" id="Pay" onclick="confirm('Are You Sure Release Vocher?')"  name="Commond" class="btn btn-primary pull-right"/>
                          
                               
                            </div>
                        </div>                
                                    
                                    
                                </div>
                                
                            </div>
                            </div>
                     
                          </div>  
                     }

                    <table border="1" style="margin-left:1%; margin-right:1%; margin-bottom:30px; width:95%;">
   
    @foreach (var item in Model)
    {
        if (a == 0)
        {
  <tr>
        <th style="width:5%;text-align:center;">
           <label id="sn"><b>S.N.</b></label>
            </th>
        <th style="width:10%;text-align:center;">
           <label id="BranchCode"><b>Month</b></label>
            </th>
        
        <th style="width:10%;text-align:center;">
           <label id="BranchName"><b>Year</b></label>
        </th>
            
        <th style="width:10%;text-align:center;">
           <label id="BranchDistrict"><b>Release Date</b></label>
        </th>
     
    </tr>
        }

        a = a + 1;
    <tr style="text-align:center;">
        <td>
            @a
        </td>
        <td>
            @mn.numbertomonthname(item.month).ToString()
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.year)
        </td>
        
        <td>
            @item.Releasedate.ToString("dd/MM/yyyy")
        </td>
     
    </tr>
    } 

</table>

                    </div>
    </div>



