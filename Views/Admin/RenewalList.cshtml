            dueamount = dueamount + item.amount;
            installamt = installamt + item.installamount;
        }

    }

            @if (a > 0)
            {
    
                <tr>
                    <td colspan="8" style="text-align: center;"><b>Grand Total</b></td>
                    <td><b>@installamt</b></td>
                    <td><b>@dueamount</b> </td>
                    <td colspan="4"></td>
                    
                </tr>
    }

        </table>





    </div>

</div>




