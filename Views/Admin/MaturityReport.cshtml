
@model IEnumerable<ODHDEVELOPERS.Models.Liability>
@using ODHDEVELOPERS.Models

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    UsersContext db = new UsersContext();
    ViewBag.Title = "MaturityReport";
    var a = 0;
     var mr = db.Members.Single(m => m.Id == 1);
     double sum = 0;
     double msum = 0;
}



 <link href="~/Content/datepicker/jquery.datepick.css" rel="stylesheet" />
<script src="~/Content/datepicker/jquery.plugin.js"></script>
<script src="~/Content/datepicker/jquery.datepick.js"></script>
<script>
    $(function () {
        $('#sdate').datepick();
        $('#edate').datepick();

    });
</script>

<div class="page-content">
      
                <div class="container">
                    <div class="page-toolbar">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Maturity Report</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                        
                        <div class="page-toolbar-block pull-right">
                            
                        </div>           
                        
                    </div>

                     <div class="row" id="hide">
                        <div class="col-md-6" style="width:100%">

                            @using(Html.BeginForm())
                            {
                    
                              <div class="block" >
                               
                                <div class="block-content controls" >
                                       <div class="row-form">
           <div class="input-group" style="margin-left:1%;margin-right:1%;">
                        <span class="input-group-addon"><label class="width">Select Month</label></span>
                         <select class="form-control" id="month" name="month" required>
                                            <option selected>Select </option>
                                                  <option value="1">January</option>
                                                  <option value="2">February</option>
                                                  <option value="3">March</option>
                                                  <option value="4">April</option>
                                                  <option value="5">May</option>
                                                  <option value="6">June</option>
                                                  <option value="7">July</option>
                                                  <option value="8">August</option>
                                                  <option value="9">September</option>
                                                  <option value="10">October</option>
                                                  <option value="11">November</option>
                                                  <option value="12">December</option>
                                                

                                        </select>
                </div>   </div>
                                   
                                    <div class="row-form">
           <div class="input-group" style="margin-left:1%;margin-right:1%;">
                        <span class="input-group-addon"><label class="width">Select Year</label></span>
                         <select class="form-control" id="year" name="year" required>
                                            <option selected>Select </option>
                                                  <option>2013 </option>
                                                  <option>2014 </option>
                                                  <option>2015 </option>
                                                  <option>2016 </option>
                                                  <option>2017 </option>
                                                  <option>2018 </option>
                                                  <option>2019 </option>
                                                  <option>2020 </option>
                                                  <option>2021 </option>
                                                  <option>2022 </option>
                                                  
                                                

                                        </select>
                </div>   </div>
                   <div class="row-form" style="width:100%">
      <div class="col-md-9">
          <button id="submit" value="Search" class="btn btn-primary pull-right" type="submit" >View</button>
     </div>
              </div>



        </div>
        </div>
 

                            }

  
                                          
<table border="1" style="margin-left:1%; margin-right:1px; margin-bottom:30px;width:98%;">
    @using (Html.BeginForm())
    {
        foreach (var item in Model)
        {
            if (a == 0)
            {
                              <tr><th colspan="3" ></th>
                                <th colspan="4" ><b>Maturity Report</b></th>
                                <th colspan="4" ><b>Month:@item.monthname</b></th>
                            </tr>
    <tr>
        <th style="width:5%;text-align:center;">
           <label id="sn"><b>S.N.</b></label>
            </th>
        <th style="width:10%;text-align:center;">
           <label id="newid"><b>Customer Id</b></label>
            </th>
        
        <th style="width:10%;text-align:center;">
           <label id="introducerid"><b>Customer Name</b></label>
        </th>
            
        <th style="width:10%;text-align:center;">
           <label id="spilid"><b>Introducer Id</b></label>
        </th>
            <th style="width:10%;text-align:center;">
           <label id="nage"><b>Doj </b></label>
        </th>
        <th style="width:5%;text-align:center;">
           <label id="position"><b>Paid Installment</b></label>
        </th>
            
 
          <th style="width:5%;text-align:center;">
           <label ><b>Unpaid Installment</b></label>
        </th>
          <th style="width:10%;text-align:center;">
           <label ><b>Plan</b></label>
        </th>
        
         <th style="width:10%;text-align:center;">
           <label ><b>Plan Amount</b></label>
        </th>
         <th style="width:10%;text-align:center;">
           <label ><b>Maturity Amount</b></label>
        </th>
         <th style="width:10%;text-align:center;">
           <label ><b>Maturity Date </b></label>
        </th>
        

       
      
    </tr>
        
                        
        
            }
            a = a + 1;



            if (item.unpaidinstallment > 0)
            {
    <tr style="text-align:center;">
        <td>
            @a
        </td>
      <td style="color:red;">
            @Html.DisplayFor(modelItem => item.newbondid)
        </td>

          <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.newintroducerid)
        </td>
        <td>
             @Convert.ToDateTime(item.doj).ToString("dd/MM/yyyy")
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.paidinstallment)
        </td>
         <td style="color:red;">
            @Html.DisplayFor(modelItem => item.unpaidinstallment)
        </td>
              <td>
            @Html.DisplayFor(modelItem => item.plan)
        </td>
         
             <td>
            @Html.DisplayFor(modelItem => item.planamount)
        </td>
            <td style="color:red;">
            @Html.DisplayFor(modelItem => item.amount)
        </td>
        
         
           <td style="color:red;">
            @Convert.ToDateTime(item.Maturitydate).ToString("dd/MM/yyyy")
        </td>
      
         
    </tr>
            }
            else
            {
                  <tr style="text-align:center;">
        <td>
            @a
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.newbondid)
        </td>

          <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.newintroducerid)
        </td>
        <td>
             @Convert.ToDateTime(item.doj).ToString("dd/MM/yyyy")
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.paidinstallment)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.unpaidinstallment)
        </td>
          <td>
            @Html.DisplayFor(modelItem => item.plan)
        </td>
         
         <td>
            @Html.DisplayFor(modelItem => item.planamount)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.amount)
        </td>
        
         
         <td>
            @Convert.ToDateTime(item.Maturitydate).ToString("dd/MM/yyyy")
        </td>
      
        
    </tr>          
    
        
            }

            sum = sum + item.planamount;
            msum = msum + item.amount;
        }


    }
    @if (sum > 0)
    {
     <tr>
                      <th colspan="4" ></th> 
          <th colspan="4" ><b>Total Plan Amount</b></th>   
          <th colspan="2" ><b>@sum</b></th>   
            
           <th colspan="2" ><b></b></th>  
                        </tr>
        
    
   <tr>
                      <th colspan="4" ></th> 
          <th colspan="4" ><b>Total Maturity Amount</b></th>   
          <th colspan="2" ><b>@msum</b></th>   
            
           <th colspan="2" ><b></b></th>  
                        </tr>
    }
</table>
                            @if (a > 0)
                            {
                                <a href="@Url.Action("PrintMaturityReport")" target="_blank">Get Report In PDF</a>
                            }
           </div>
                         </div>
                     
                    </div>
    </div>

