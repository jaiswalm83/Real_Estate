@using ODHDEVELOPERS.Models;
@{
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1); 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "SendSMS";
}

<div class="page-content">

                <div class="container">
                    <div class="page-toolbar">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Send SMS for Due RD Collection</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                        
                        <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
                                <div id="reportrange" class="dtrange">                                            
                                    <span></span><b class="caret"></b>
                                </div>                            
                            </div>
                        </div>           
                        
                    </div>

                    @using (Html.BeginForm())
                    {
  <div class="row" style="width:100%">
                        <div class="col-md-6" style="width:100%">
                            
                            <div class="block" style="width:100%">
                                 <div class="block-content controls">

                                      <div class="row-form">
                                 <div class="col-md-9">
                                        <div class="input-group">
                       <span class="input-group-addon"><label class="width">Select Till Days </label></span>          
                                     <input type="Number" class="form-control" id="day"  name="day" required />
                                         </div>
                           
                                        </div>
                                          </div>


                                                                 
                                       <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
                                                          
           <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure to Send RD SMS?')" name="command" value="send">Send SMS</button>                            
                               
                            </div>
                        </div>
                                <div>&nbsp;@ViewBag.msg</div>   
                                                                      
                                                            
                                    
                                    
                                </div>
                                
                            </div>
                            </div>
                          </div>    
                    }
                     
                    </div>
    </div>

