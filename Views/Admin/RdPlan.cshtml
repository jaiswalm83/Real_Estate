@model ODHDEVELOPERS.Models.Plan_Tab
@using ODHDEVELOPERS.Models;
@{
    UsersContext db = new UsersContext();
    var plan1 = db.Plans.Single(p2 => p2.Plancode== 1); 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "RdPlan";
    var mr = db.Members.Single(m => m.Id == 1);
    var mislist = (from m in db.NewPlans where m.Type == "RD" select new { m.Planname,m.Plancode }).ToList();
}







<div class="page-content">

                <div class="container">

<div class="page-toolbar">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Create @plan1.Planname</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                        
                               
                        
                    </div> 



                    <div class="row" style="width:100%">
                        <div class="col-md-6" style="width:100%">
                            
                            <div class="block" style="width:100%">
                               <div class="block-content controls">  

     @using (Html.BeginForm())
     {
    
 
                                   
                           
                           
           <div class="row-form">                      
    <div class="col-md-9">
         <div class="input-group">
       <span class="input-group-addon"><label class="width">@mr.planname Name </label></span>  
           <select class="form-control" id="Planname" name="Plancode" required>
                                            <option selected>Select </option>
                                                 @foreach (var mis in mislist)
                                                 {
                                                 <option value="@mis.Plancode">@mis.Planname </option>
                                                 
                                                 }

                                        </select>
           </div>
    
</div> 
         </div>
            <div class="row-form">                      
    <div class="col-md-9">
         <div class="input-group">
       <span class="input-group-addon"><label class="width">Plot Size </label></span>  
        <input type="text" class="form-control" name="Plotsize" id="Plotsize" required></div>
           
          </div>                   
    
</div> 
       
             <div class="row-form">                      
    <div class="col-md-9">
         <div class="input-group">
       <span class="input-group-addon"><label class="width">Monthly </label></span>  
        <input type="text" class="form-control"  name="Monthly" id="Monthly" required></div>
          </div>    
          
</div> 
         
         
         
             <div class="row-form">                      
    <div class="col-md-9">
         <div class="input-group">
       <span class="input-group-addon"><label class="width">Quarterly </label></span>  
        <input type="text" class="form-control"  name="Quarterly" id="Quarterly" required></div>
</div>
</div> 
          
         
            <div class="row-form">                      
    <div class="col-md-9">
         <div class="input-group">
       <span class="input-group-addon"><label class="width">HalfYearly </label></span>  
        <input type="text" class="form-control"  name="Halfyearly" id="Halfyearly" required></div>
</div>
</div> 
         
         
         <div class="row-form">                      
    <div class="col-md-9">
         <div class="input-group">
       <span class="input-group-addon"><label class="width">Yearly </label></span>  
        <input type="text" class="form-control"  name="Yearly" id="Yearly" required></div>
</div>
</div> 
         
         <div class="row-form">                      
    <div class="col-md-9">
         <div class="input-group">
       <span class="input-group-addon"><label class="width">Amount </label></span>  
        <input type="text" class="form-control"  name="Amount" id="Amount" required></div>
               
    </div>
</div> 
         
         <div class="row-form">                      
    <div class="col-md-9">
         <div class="input-group">
       <span class="input-group-addon"><label class="width">Bonus Amount</label></span>  
        <input type="text" class="form-control"  name="Accidental" id="Accidental" required></div>
</div>
</div>
         
            <div class="row-form">                      
    <div class="col-md-9">
         <div class="input-group">
       <span class="input-group-addon"><label class="width">Maturity Amount</label></span>  
        <input type="text" class="form-control"  name="EstimatedValue" id="EstimatedValue" required></div>
</div>
</div> 
        
           
      
               
                 <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
         <button  type="submit" class="btn btn-primary pull-right"> Create @mr.planname</button>   
                                </div>
                                             </div>
         
     <p style="color:maroon;"><b> @ViewBag.msg</b></p>
     }
                                </div>
                                
                            
                                         
                                    </div>
                            </div>
                                        
                   </div> </div> </div>
                   

