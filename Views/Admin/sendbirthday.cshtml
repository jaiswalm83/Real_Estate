@model IEnumerable<ODHDEVELOPERS.Models.BrokerList>
@using ODHDEVELOPERS.Models
@{
    ViewBag.Title = "sendbirthday";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var a = 0;

    UsersContext db = new UsersContext();
  //  var mr = db.Members.Single(c => c.Id == 1);
}

<link href="~/Content/datepicker/jquery.datepick.css" rel="stylesheet" />
<script src="~/Content/datepicker/jquery.plugin.js"></script>
<script src="~/Content/datepicker/jquery.datepick.js"></script>
<script>
    $(function () {
        $('#sdate').datepick();
        $('#edate').datepick();
      
    });
</script>

<div class="page-content">
      
                <div class="container" id="divid">
                  
<div class="page-toolbar" >
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Datewise Details</div>
                            <div class="page-toolbar-subtitle"> </div>
                        </div>
                        <div class="page-toolbar-block pull-right">
                            
                        </div>  
    
    <div class="row" style="width:100%">
                        <div class="col-md-6" style="width:98%">
                            
                            <div class="block" style="width:98%">
                                <div class="block-content controls">
                               @using(Html.BeginForm())
                               {
                                <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                        <label class="width">Search By</label>
                                        </span>
                                        <input type="radio" id="chkYes" name="command" value="Customer" /> Customer

                                        <input type="radio" id="chkNo" name="command" value="Associate" />Associate
                                    </div>
                                </div>
                            </div>
                                <div class="row-form">
                                        <div class="col-md-9">
                                            <div class="input-group">
                        <span class="input-group-addon"><label class="width">Start Date</label></span>  
                        <input type="text" class="form-control" id="sdate" name="sdate" required ></div>
                                        </div>
                                    </div>   
                                   <div class="row-form">

                                        <div class="col-md-9">
                                            
                                             <div class="input-group">
                        <span class="input-group-addon"><label class="width">End Date</label></span>  
                         <input type="text" class="form-control"  id="edate" name="edate" required ></div>
                                        </div>
                                    </div>

                                       <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
                                                          
                                <button class="btn btn-primary"><i class="fa fa-cog"></i>Search</button>                            
                               
                            </div>
                        </div>
                               }

                                </div>
                                
                            </div>
                            </div>
                          </div>
    </div> 
    
       
 
<table border="1" style="margin-left:1%; margin-right:1%; margin-bottom:60px;width:95%;">
   
    @foreach (var item in Model)
    {

        if (a == 0)
        {
             <tr><th colspan="2" >@*@mr.branchname Name:@item.branchname*@</th>
                 <th colspan="3" ><b> Duration:@Convert.ToDateTime(item.sdate).ToString("dd/MM/yyyy") -@Convert.ToDateTime(item.edate).ToString("dd/MM/yyyy")</b></th>
                 <th colspan="2" ><b> Datewise @*@mr.agentname List*@</b></th>
               
           </tr>
  <tr>
         <th style="width:5%;text-align:center;">
           <label><b>S.N.</b></label>
            </th>
        <th style="width:25%;text-align:center;">
           <label><b>@*@mr.agentname*@ Id</b></label>
            </th>

      <th style="width:20%;text-align:center;">
           <label><b>Name</b></label>
            </th>

       <th style="width:10%;text-align:center;">
           <label ><b>@*@mr.rankname*@</b></label>
            </th>
        
        <th style="width:20%;text-align:center;">
           <label><b>Introducer Id</b></label>
        </th>


        <th style="width:10%;text-align:center;">
           <label><b>Mobile No</b></label>
        </th>
            
       
         <th style="width:10%;text-align:center;">
        <label id="email"><b>Date of Joining</b></label>
        </th>

        
    </tr>
        }

        a = a + 1;
    <tr style="text-align:left;">
        <td>
            @a
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.newagentid)
        </td>

          <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.rankname)
        </td>
        
        
        <td>
            @Html.DisplayFor(modelItem => item.introducerid)
        </td>

       
           <td>
            @Html.DisplayFor(modelItem => item.mobile)
        </td>
        
        <td>
             @Convert.ToDateTime(item.doj).ToString("dd/MM/yyyy")
        </td>
        
        
      
       
             
    </tr>
    } 

</table>
    </div>

    </div>


