@model ODHDEVELOPERS.Models.NewPlan
@using ODHDEVELOPERS.Models;
@{
    UsersContext db=new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    var plan1 = db.Plans.Single(p1 => p1.Plancode == 1);
    var plan2 = db.Plans.Single(p2 => p2.Plancode == 2);
    var plan3 = db.Plans.Single(p3 => p3.Plancode == 3);
    var plan4 = db.Plans.Single(p4 => p4.Plancode == 4);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Planname";
}


<div class="page-content">

    <div class="container">

        <div class="page-toolbar">

            <div class="page-toolbar-block">
                <div class="page-toolbar-title">Create New @mr.planname</div>
                <div class="page-toolbar-subtitle"></div>
            </div>
        </div>
        <div class="row" style="width: 100%">
            <div class="col-md-6" style="width: 100%">

                <div class="block" style="width: 100%">
                    <div class="block-content controls">

                        @using (Html.BeginForm())
                        {
    
 
                                   
                            <div class="row-form">

                                <div class="col-md-9">
                                    <div class="input-group">

                                        <span class="input-group-addon">
                                            <label class="width">@mr.planname Category</label></span>

                                        <input type="radio" name="Type" class="plantype" value="RD" id="RD" />@plan1.shortcutname
                                        <input type="radio" name="Type" class="plantype" value="FD" id="FD" />@plan2.shortcutname
                                        <input type="radio" name="Type" class="plantype" value="NFP" id="NFP" />@plan3.shortcutname
                                        <input type="radio" name="Type" class="plantype" value="PPS" id="PPS" />@plan4.shortcutname

                                    </div>
                                </div>
                            </div>
                           
                            <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">@mr.planname Name </label>
                                        </span>
                                        <input type="text" class="form-control" name="Planname" id="Planname" required>
                                    </div>

                                </div>

                            </div> 
         
         
                            <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Term </label>
                                        </span>
                                        <input type="text" class="form-control" name="Term" id="Term" required>
                                    </div>

                                </div>

                            </div> 
         
         
                            <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Monthly Installment </label>
                                        </span>
                                        <input type="text" class="form-control" name="mlyinstall" id="mlyinstall" required>
                                    </div>

                                </div>

                            </div> 
         
         
                            <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Quarterly Installment </label>
                                        </span>
                                        <input type="text" class="form-control" name="qlyinstall" id="qlyinstall" required>
                                    </div>
                                </div>
                            </div> 
         
         
                            <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Halfyearly Installment </label>
                                        </span>
                                        <input type="text" class="form-control" name="hlyinstall" id="hlyinstall" required>
                                    </div>
                                </div>

                            </div> 
         
                            <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Yearly Installment </label>
                                        </span>
                                        <input type="text" class="form-control" name="ylyinstall" id="ylyinstall" required>
                                    </div>
                                </div>

                            </div> 
                            <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Revival Time(In Months) </label>
                                        </span>
                                        <input type="text" class="form-control" name="revivaltime" id="revivaltime" required>
                                    </div>
                                </div>
                            </div> 
                            <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Booking Rate</label>
                                        </span>
                                        <input type="text" class="form-control" name="bookingrate" id="bookingrate" required>
                                    </div>

                                </div>

                            </div>
               
                            <div class="page-toolbar-block pull-right">
                                <div class="widget-info widget-from">
                                    <button type="submit" class="btn btn-primary pull-right">Create @mr.planname</button>
                                </div>
                            </div>
         
                            <p style="color: maroon;"><b>@ViewBag.msg</b></p>
     }
                    </div>



                </div>
            </div>

        </div>
    </div>
</div>