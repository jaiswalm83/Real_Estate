
@model IEnumerable<ODHDEVELOPERS.Models.Branchtab>
    @using ODHDEVELOPERS.Models;
    @{
        UsersContext db = new UsersContext();
        var mr = db.Members.Single(m => m.Id == 1);
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
        ViewBag.Title = "UpdateBranch";
        var a = 0;
    }

    <script type="text/javascript">
        $(document).ready(function () {
            $("#bcode").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/Admin/AutoCompleteBrachcode",
                        type: "POST",
                        dataType: "json",
                        data: { term: request.term },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.BranchName, value: item.BranchCode };
                            }))
                        }
                    })
                },
                messages: {
                    noResults: "", results: ""
                }
            });
        })
    </script>

    <!-- Flatpickr CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

    <!-- Flatpickr JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <link href="~/assets/css1/main css/Forms.css" rel="stylesheet" />

    <div class="container mt-5">
        <div class="page-toolbar-block pull-right">
            <div class="widget-info widget-from">
                <div>
                    <label>@DateTime.Now</label>
                </div>
            </div>
        </div>

        <h2 class="text-center mb-4 create-title">
            Update @mr.branchname Details
        </h2>
        @using (Html.BeginForm("UpdateBranch", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div id="paymentForm" class="form-container">

                <!-- Associate ID -->
                <div class="form-group">
                    <label for="associateId" class="form-label">Enter @mr.branchname Code or Name:</label>
                    <input type="text" class="form-control" name="bcode" id="bcode" placeholder="Enter Code" required>
                </div>



                <!-- Submit Button -->
                <div class="text-center d-grid gap-2">
                    <button type="submit" id="btnsearch" name="command" class="btn create-btn" value="Search">Search</button>
                </div>
            </div>










            foreach (var item in Model)
            {
                if (a == 0)
                {


                    <h2 class="text-center mb-4 create-title" style="margin-top:3rem">
                        @mr.branchname Details
                    </h2>

                    <div id="paymentForm" class="form-container">
                        <!-- Associate ID -->
                        <div class="form-group">
                            <label for="associateId" class="form-label">Branch Code</label>
                            <input type="text" class="form-control" name="bnid" id="bnid" value="@Html.DisplayFor(modelItem => item.BranchCode)" readonly placeholder="Enter Code" required>
                        </div>

                        <!-- Associate ID -->
                        <div class="form-group">
                            <label for="associateId" class="form-label">Name</label>
                            <input type="text" class="form-control" name="bname" id="bname" value="@Html.DisplayFor(modelItem => item.BranchName)" placeholder="Enter Code" required>
                        </div>





                        <!-- Associate ID -->
                        <div class="form-group">
                            <label for="associateId" class="form-label">District</label>
                            <input type="text" class="form-control" name="district" id="district" value="@Html.DisplayFor(modelItem => item.BranchDistrict)" placeholder="Enter Code" required>
                        </div>






                        <!-- Associate ID -->
                        <div class="form-group">
                            <label for="associateId" class="form-label">Address</label>
                            <input type="text" class="form-control" name="address" id="address" value="@Html.DisplayFor(modelItem => item.branchaddress)" placeholder="Enter Code" required>
                        </div>





                        <!-- Associate ID -->
                        <div class="form-group">
                            <label for="associateId" class="form-label">Mobile</label>
                            <input type="text" class="form-control" name="mobile" id="mobile" value="@Html.DisplayFor(modelItem => item.mobile)" placeholder="Enter Code" required>
                        </div>

















                        
                                <button id="btnupdate" name="command" type="submit" class="btn create-btn" value="Update" formnovalidate="formnovalidate" style="margin-left:32rem">Update</button>

                       

                        </div>

                        }
                        }

                        <p style="color:maroon;margin-left:15px;"><b> @ViewBag.msg</b></p>



























                        }
                    </div>


