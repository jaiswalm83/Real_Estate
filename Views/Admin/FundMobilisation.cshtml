@model IEnumerable<ODHDEVELOPERS.Models.FundMobilization>
@using ODHDEVELOPERS.Models
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "FundMobilisation";
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    var a = 0;
    var plan1 = db.Plans.Single(p1 => p1.Plancode == 1);
    var plan2 = db.Plans.Single(p2 => p2.Plancode == 2);
    var plan3 = db.Plans.Single(p2 => p2.Plancode == 3);
    var plan4 = db.Plans.Single(p2 => p2.Plancode == 4);
    Double tsis = 0, tMISFresh = 0, tMIS1 = 0, tMIS2 = 0, tMIS3 = 0, tMIS4 = 0, tMIS5 = 0, tMIS6 = 0, tMIS7a = 0, total = 0, gtotal = 0, tpps = 0,tnfp=0;
    
}
<link href="~/Content/datepicker/jquery.datepick.css" rel="stylesheet" />
<script src="~/Content/datepicker/jquery.plugin.js"></script>
<script src="~/Content/datepicker/jquery.datepick.js"></script>

<script>
    $(function () {
        $('#sdate').datepick();
        $('#edate').datepick();
        
    });

</script>

<div class="page-content">
         
                <div class="container" id="divid1">
                    <div class="page-toolbar" id="2">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Fund Mobilisation Report</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                        
                    </div>
 
  @using (@Html.BeginForm()){
                   <div class="row" id="hide">
                        <div class="col-md-6" style="width:98%">
                            
                            <div class="block" >
                               
                                <div class="block-content controls" >
                                     <div class="row-form">
           <div class="input-group" style="margin-left:1%;margin-right:1%;">
                        <span class="input-group-addon"><label class="width">Start Date</label></span>
                    <input type="text" id="sdate" class="form-control" required name="sdate" />
                         
                </div>   </div>
            
              <div class="row-form">
           <div class="input-group" style="margin-left:1%;margin-right:1%;">
                        <span class="input-group-addon"><label class="width">End Date</label></span>
                    <input type="text" id="edate" class="form-control" required name="edate" />
                         
                </div>   </div>


                   <div class="row-form" style="width:98%">
      <div class="col-md-9">
          <button id="submit" value="Search" class="btn btn-primary pull-right" type="submit">View</button>
     </div>
              </div>


        </div>
        </div>
                             </div>
        </div>
                    }
                  
<table border="1" style="margin-left:1%; margin-right:1px; width:95%; margin-bottom:70px; ">
    @using (Html.BeginForm())
                {
                    foreach (var item in Model)
                    {
                        if (a == 0)
                        {
                            <tr><th colspan="6" style="text-align:center;"></th>
                                <th colspan="3" style="text-align:center;" ><b>Fund Mobilisation Report</b></th>
                                <th colspan="5" style="text-align:center;" ><b>Duration:@item.sdate.ToString("dd/MM/yyyy")-@item.edate.ToString("dd/MM/yyyy")</b></th>
                            </tr>
        
    <tr>
        <th style="width:3%;text-align:center;">
           <label id="sn"><b>S.N.</b></label>
            </th>
         <th style="width:13%;text-align:center;">
           <label id="option"><b>@mr.planname</b></label>
        </th>
        <th style="width:10%;text-align:center;">
           <label id="planname"><b>@plan2.shortcutname Fresh</b></label>
            </th>
        
        <th style="width:9%;text-align:center;">
           <label id="term_plan"><b>@plan1.shortcutname Fresh</b></label>
        </th>
        <th style="width:9%;text-align:center;">
           <label id="term_plan1"><b>@plan4.shortcutname Fresh</b></label>
        </th>
        <th style="width:9%;text-align:center;">
           <label id="term_plan2"><b>@plan3.shortcutname Fresh</b></label>
        </th>
            
        <th style="width:8%;text-align:center;">
           <label id="mode"><b>1st Year</b></label>
        </th>
            
        <th style="width:8%;text-align:center;">
            <label id="amount" ><b>2nd Year</b></label>
        </th>
             
             
        <th style="width:8%;text-align:center;">
        <label id="latefine" ><b>3rd Year</b></label>
        </th>
            
         <th style="width:8%;text-align:center;">
         <label id="paymentdate"><b>4th Year</b></label>
        </th>

         <th style="width:8%;text-align:center;">
           <label id="expirydate"><b>5th year</b></label>
        </th>
      <th style="width:8%;text-align:center;">
           <label id="payamount1"><b>6th Year</b></label>
        </th>

         <th style="width:8%;text-align:center;">
           <label id="payamount"><b>7th Yr & Above </b></label>
        </th>
       

         <th style="width:9%;text-align:center;">
           <label id="payamount3"><b>TOTAL</b></label>
        </th>

      
    </tr>
    }
                        a = a + 1;
                        total = (Convert.ToDouble(item.tsis) + Convert.ToDouble(item.tNFPFresh)+Convert.ToDouble(item.tMISFresh)+ Convert.ToDouble(item.tPPSFresh) + Convert.ToDouble(item.tMIS1) + Convert.ToDouble(item.tMIS2) + Convert.ToDouble(item.tMIS3) + Convert.ToDouble(item.tMIS4) + Convert.ToDouble(item.tMIS5) + Convert.ToDouble(item.tMIS6) + Convert.ToDouble(item.tMIS7a));         

    <tr style="text-align:center;">
        <td>
            @a
        </td>
          <td>
             @Html.DisplayFor(modelItem => item.planname)
        </td>
            <td>
            @Html.DisplayFor(modelItem => item.tsis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tMISFresh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tPPSFresh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tNFPFresh)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.tMIS1)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.tMIS2)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.tMIS3)
        </td>
         
        <td>
            @Html.DisplayFor(modelItem => item.tMIS4)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.tMIS5)
           
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.tMIS6)
        </td>

       <td>
            @Html.DisplayFor(modelItem => item.tMIS7a)
        </td>
        
                        
        <td>@total</td>
        

    </tr>
                        tsis = tsis + Convert.ToDouble(item.tsis);
                        tMISFresh = tMISFresh + Convert.ToDouble(item.tMISFresh);
                        tpps = tpps + Convert.ToDouble(item.tPPSFresh);
                        tnfp = tnfp + Convert.ToDouble(item.tNFPFresh);
                        tMIS1 = tMIS1 + Convert.ToDouble(item.tMIS1);
                        tMIS2 = tMIS2 + Convert.ToDouble(item.tMIS2);
                        tMIS3 = tMIS3 + Convert.ToDouble(item.tMIS3);
                        tMIS4 = tMIS4 + Convert.ToDouble(item.tMIS4);
                        tMIS5 = tMIS5 + Convert.ToDouble(item.tMIS5);
                        tMIS6 = tMIS6 + Convert.ToDouble(item.tMIS6);
                        tMIS7a = tMIS7a + Convert.ToDouble(item.tMIS7a);
                       
                        gtotal = gtotal + total;
                        
    }
    if(a>0)
    {
    <tr style="text-align:center;">
        <td colspan="2">
            <b>GRAND TOTAL:</b>
        </td>
          <td>
           <b> @tsis</b>
        </td>
            <td>
           <b> @tMISFresh</b>
        </td>
        <td>
           <b> @tpps</b>
        </td>
        <td>
           <b> @tnfp</b>
        </td>
        <td>
           <b> @tMIS1</b>
        </td>
        
        <td>
           <b> @tMIS2</b>
        </td>
        
        <td>
          <b>  @tMIS3</b>
        </td>
       
        <td>
           <b> @tMIS4</b>
        </td>
         
        <td>
           <b> @tMIS5</b>
        </td>
        
        <td>
           <b> @tMIS6</b>
           
        </td>
         <td>
           <b> @tMIS7a</b>
        </td>
    
        <td>
            <b>@gtotal</b>
        
            </td>
    </tr>
    }
                     
    }
    
    
    
   
</table>
                       @if(a>0)
        {
         <a href="@Url.Action("PrintFundMobilisation")" target="_blank">Get Report In PDF</a>
        }
             
                   
         
                    </div>
    </div>


