
@using ODHDEVELOPERS.Models;
@{
    UsersContext db = new UsersContext();
    var inout = db.InOutTimes.Single(m => m.Id == 1);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Loginouttime";
}


<link href="~/assets/css1/main css/Forms.css" rel="stylesheet" />

<div class="container mt-5">
    <!-- Title -->
    <h2 class="text-center create-title">Set Log In-Out Time</h2>

    @using (Html.BeginForm())
    {

        <!-- Form -->
<div id="logTimeForm" class="form-container">
    <!-- Login Time -->
    <div class="form-group">
        <label for="loginTime" class="form-label">Select Login Time</label>
        <input type="time" class="form-control" name="login" id="login" value="@inout.login" required>
    </div>

    <!-- Logout Time -->
    <div class="form-group">
        <label for="logoutTime" class="form-label">Select Logout Time</label>
        <input type="time" class="form-control" name="logout" id="logout" value="@inout.logout" required>
    </div>

    @if (inout.status == 0)
    {
        <!-- Action: Active/Deactive -->
        <div class="form-group">
            <label class="form-label">Action</label>
            <div class="form-check-inline">
                <input type="radio" class="form-check-input" name="status" value="1" id="active" checked>
                <label class="form-check-label" for="active">Active</label>
            </div>

            <div class="form-check-inline">
                <input type="radio" class="form-check-input" name="status" value="0" id="inactive">
                <label class="form-check-label" for="deactive">Deactive</label>
            </div>
        </div>
    }
    @if (inout.status == 1)
    {
        <div class="form-group">


            <label class="form-label">Action</label>

            <div class="form-check-inline">
                <input type="radio" name="status" class="form-check-input" value="1" id="active1" checked />Active
                <input type="radio" name="status" class="form-check-input" value="0" id="inactive1" />Deactive
            </div>

        </div>


    }

 
    <!-- Submit Button -->
    <div class="text-center">
        <button type="submit" class="btn create-btn">Set Time</button>
    </div>

    <p style="color: maroon;"><b>@ViewBag.msg</b></p>

</div>
    }
    </div>


