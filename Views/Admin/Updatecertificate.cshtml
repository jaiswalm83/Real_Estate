
@model IEnumerable<ODHDEVELOPERS.Models.APIKeyCertificate>
    @using ODHDEVELOPERS.Models;
    @{
        UsersContext db = new UsersContext();
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
        ViewBag.Title = "Updatecertificate";
        var a = 0;
    }

    <link href="~/assets/css1/main css/Forms.css" rel="stylesheet" />
    <div class="container mt-5">
        <!-- Title -->
        <h2 class="text-center create-title">Update API Key & Certificate</h2>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <!-- Form -->
                <form id="blockForm" class="form-container" method="post">
                    <!-- KEY-1 Input -->
                    <div class="form-group">
                        <label for="key1" class="form-label">KEY-1</label>
                        <input type="text" class="form-control" id="key1" name="livecert" value="@item.livecert">
                        @*<textarea class="form-control" name="livecert" cols="3">@item.livecert</textarea>*@
                    </div>

                    <!-- KEY-2 Input -->
                    <div class="form-group">
                        <label for="key2" class="form-label">KEY-2</label>
                        <input type="text" class="form-control" id="key2" name="mycert" value="@item.mycert">
                    </div>

                    <!-- Status (Fixed) -->
                    <div class="form-group">
                        <label for="status" class="form-label">Status</label>
                        <input type="text" class="form-control" id="status" name="status" value="@item.status" readonly>
                    </div>



                    <!-- Create Button -->
                    <div class="text-center">
                        <button type="submit" class="btn create-btn">Set</button>
                    </div>
                </form>
            }
        }
            </div>

