@model IEnumerable<ODHDEVELOPERS.Models.CompanyInfo>

@{
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
    ViewBag.Title = "UpdateCompany";
    var a = 0;
}


 <link rel="stylesheet" href="~/Content/jquery-ui.css" />

<script>
    $(function () {
        $('.date').datepick();
    });
</script>

<div class="page-content">

    <div class="container">

        <div class="page-toolbar">


            <div class="page-toolbar-block">
                <div class="page-toolbar-title">Update Company</div>
                <div class="page-toolbar-subtitle"></div>
            </div>
            <div class="page-toolbar-block pull-right">
            </div>
        </div>
        @using (Html.BeginForm("UpdateCompany", "Company", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-md-6" style="width: 100%;">

                    <div class="block">

                        <div class="block-content controls">

                            <div class="row-form">
                                <div class="input-group" style="margin-left: 1%; margin-right: 1%;">
                                    <span class="input-group-addon">Enter Company ID or Name</span>
                                    <input type="text" id="custid" class="form-control" required name="AdminId">
                                </div>
                            </div>

                            <div class="page-toolbar-block pull-right">
                                <div class="widget-info widget-from">

                                    <button id="btnsearch" name="command" type="submit" class="btn btn-primary" value="Search">Search</button>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
                          foreach (var item in Model)
                          {
                              if (a == 0)
                              {
                                  
            <div class="row">
                <div class="col-md-6">


                    <div class="block">
                        <div class="block-content">
                            <h2><strong>Company Details</strong> </h2>

                        </div>
                        <div class="block-content controls">
                            <div class="row-form">
                                <div class="col-md-9">

                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Company User Id</label></span>
                                        <input type="text" class="form-control"  required  name="cid" id="AdminId" value="@Html.DisplayFor(modelItem => item.AdminId)" readonly="true" />
                                    </div>



                                </div>

                            </div>

                            <div class="row-form">

                                <div class="col-md-9">

                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Company Name</label></span>
                                        <input type="text" class="form-control" name="CompanyName" id="CompanyName" value="@Html.DisplayFor(modelItem => item.CompanyName)" required>
                                    </div>

                                </div>

                            </div>

                            <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Company Short Name</label></span>
                                        <input type="text" class="form-control" name="Companysrtcut" id="Companysrtcut" value="@Html.DisplayFor(modelItem => item.Companysrtcut)" required>
                                    </div>


                                </div>

                            </div>

                            <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">DirectorName</label></span>
                                        <input type="text" class="form-control" required  name="DirectorName" id="DirectorName" value="@Html.DisplayFor(modelItem => item.DirectorName)" />
                                    </div>

                                </div>

                            </div>

                            <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Registration No</label></span>
                                        <input type="text" class="form-control" name="RegistrationNo" id="RegistrationNo" value="@Html.DisplayFor(modelItem => item.RegistrationNo)" >
                                    </div>
                                </div>


                            </div>

                            
                            <div class="row-form">
                                <div class="col-md-9">

                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Contact No</label></span>
                                        <input type="text" class="form-control" required  name="Contact" id="Contact" value="@Html.DisplayFor(modelItem => item.Contact)" />
                                    </div>



                                </div>

                            </div>
                            <div class="row-form">
                                <div class="col-md-9">

                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Email Id</label></span>
                                        <input type="text" class="form-control"  name="Emailid" id="Emailid" value="@Html.DisplayFor(modelItem => item.Emailid)">
                                    </div>



                                </div>

                            </div>
                            <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Address</label></span>
                                        <textarea class="form-control"  name="Address"  id="Address" >@item.Address</textarea>
                                    </div>

                                </div>

                            </div>

                            <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">State</label></span>
                                        <input type="text" class="form-control" name="State" id="State" value="@Html.DisplayFor(modelItem => item.State)">
                                    </div>

                                </div>
                            </div>

                            <div class="row-form">
                                <div class="col-md-9">

                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Zip Code</label></span>
                                        <input type="text" class="form-control" name="Zipcode" id="Zipcode"value="@Html.DisplayFor(modelItem => item.Zipcode)" >
                                    </div>


                                </div>


                            </div>
                            <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Website Name</label></span>
                                        <input type="text" class="form-control" name="HeadOffice"  id="HeadOffice" value="@Html.DisplayFor(modelItem => item.HeadOffice)" required />
                                    </div>



                                </div>

                            </div>

                            <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Website Expiry Date</label></span>
                                        <input type="text" class="form-control date" name="RegDate"  id="RegDate" value="@Html.DisplayFor(modelItem => item.RegDate)" required />
                                    </div>



                                </div>

                            </div>
                            <div class="row-form">
                                <div class="col-md-9">


                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Select Income Type</label></span>

                                        <select class="form-control" name="IncomeType" id="IncomeType">
                                            <option selected>Commission</option>
                                            <option>Salary</option>



                                        </select>


                                    </div>

                                </div>

                            </div>




                            <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Upload Logo</label></span>


                                        <input type="file" class="form-control" name="CompanyLogo" id="CompanyLogo" />


                                    </div>
                                </div>
                            </div>

                            <div class="row-form">
                                <img id="imgid" src="@Url.Content(item.CompanyLogo) " style="height:100px;width:100px;" />
                            </div>

                            <div class="page-toolbar-block pull-right">
                                <div class="widget-info widget-from">
                                    <button id="btnupdate" name="command" type="submit" class="btn btn-primary" value="Update" formnovalidate="formnovalidate">Update</button>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                          
                              }
                          } 
                                        
            <p style="color: maroon; margin-left: 15px;"><b>@ViewBag.msg</b></p>     
                               
                           
                         
                      }



    </div>

</div>
                    