@model ODHDEVELOPERS.Models.CompanyInfo
@{
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
    ViewBag.Title = "CompanyReg";
    
}



<div class="page-content">

                <div class="container">

<div class="page-toolbar">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Create Company</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                        
                        <div class="page-toolbar-block pull-right">
                           
                        </div>           
                        
                    </div> 



                    <div class="row" style="width:100%">
                        <div class="col-md-6" style="width:100%">
                            
                            <div class="block" style="width:100%">
                               <div class="block-content controls">  

                    
                      
                        
     @using (Html.BeginForm("CompanyReg", "Company", FormMethod.Post, new { enctype = "multipart/form-data" }))
     {
     
  <div class="row-form">
     <div class="col-md-9">
         
          <div class="input-group">
         <span class="input-group-addon"><label class="width">Company User Id</label></span>
         <input type="text" class="form-control"  required  name="AdminId" id="AdminId">
                </div>

         

     </div>
   
                     </div>
                 
                 <div class="row-form">
       <div class="col-md-9">
           
           <div class="input-group">
         <span class="input-group-addon"><label class="width">Company Password</label></span>
         <input type="Password" class="form-control"  required name="Password" id="Password">
                </div>

          



       </div>
       
                                 </div>
         
         
                 <div class="row-form">
       <div class="col-md-9">
           
             <div class="input-group">
         <span class="input-group-addon"><label class="width">DirectorName</label></span>
          <input type="text" class="form-control" required  name="DirectorName" id="DirectorName">
                </div>


        


       </div>
      
                                       </div>
         
        
         
                                    
                   <div class="row-form">
                                          
    <div class="col-md-9">
         
         <div class="input-group">
         <span class="input-group-addon"><label class="width">Company Name</label></span>
              <input type="text" class="form-control" name="CompanyName" id="CompanyName" required>
                </div>
        
        </div> 
         
                       </div>

         <div class="row-form">         
    <div class="col-md-9">
         <div class="input-group">
         <span class="input-group-addon"><label class="width">Company Short Name</label></span>
              <input type="text" class="form-control" name="Companysrtcut" id="Companysrtcut" required>
                </div>
        
        
        </div> 
         
         </div>
         
         
           <div class="row-form">
       <div class="col-md-9">
           
               <div class="input-group">
         <span class="input-group-addon"><label class="width">Contact No</label></span>
         <input type="text" class="form-control" required  name="Contact" id="Contact">
                </div>

           

       </div>
       
                                       </div>
         <div class="row-form">
       <div class="col-md-9">
           
               <div class="input-group">
         <span class="input-group-addon"><label class="width">Email Id</label></span>
         <input type="text" class="form-control"  name="Emailid" id="Emailid">
                </div>

           

       </div>
       
                                       </div>
          
         
          <div class="row-form">                      
    <div class="col-md-9">
         <div class="input-group">
         <span class="input-group-addon"><label class="width">Registration No</label></span>
            <input type="text" class="form-control" name="RegistrationNo" id="RegistrationNo" >
                </div>
        

    </div>
                                   
 
</div> 
         
          <div class="row-form">
      <div class="col-md-9">
           <div class="input-group">
         <span class="input-group-addon"><label class="width">Website Name</label></span>
         <textarea class="form-control" name="HeadOffice"  id="HeadOffice" required></textarea>
                </div>
          
          

                           </div>
         
          </div>
         <div class="row-form">
      <div class="col-md-9">
          
            <div class="input-group">
         <span class="input-group-addon"><label class="width">Address</label></span>
        <textarea class="form-control"  name="Address"  id="Address"></textarea>
                </div>

          


      </div>
  
                           </div>
         
           <div class="row-form">                      
    <div class="col-md-9">
        
        
            <div class="input-group">
         <span class="input-group-addon"><label class="width">State</label></span>
        <input type="text" class="form-control" name="State" id="State" >
                </div>


       



    </div>
                                   
    
</div> 
         
           <div class="row-form">                      
    <div class="col-md-9">
        
           <div class="input-group">
         <span class="input-group-addon"><label class="width">Zip Code</label></span>
         <input type="text" class="form-control" name="Zipcode" id="Zipcode" >
                </div>

        
      



    </div>
                                   
    
</div> 
            
          <div class="row-form">                      
    <div class="col-md-9">


        <div class="input-group">
  <span class="input-group-addon"><label class="width">Select Income Type</label></span>

            <select class="form-control" name="IncomeType" id="IncomeType">
            <option selected>Commission</option>
            <option>Salary</option>
           


        </select>


</div>

</div> 
         
         </div>
         <div class="row-form">
                    <div class="col-md-9">
      <div class="input-group">
       <span class="input-group-addon"><label class="width">Upload Logo</label></span>
       

          <input type ="file" class="form-control" name="CompanyLogo" id="CompanyLogo" value="~/Photo/CompanyLogo.jpg"  required />
          
          
        </div>
      </div>
               </div>
                 
                 <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
         <button  type="submit" class="btn btn-primary pull-right"> Submit</button>   
                                </div>
                                             </div>
         
     <p style="color:maroon;"><b> @ViewBag.msg</b></p>
         
     }   
                                </div>
                                
                            
                                    
                                    </div>
                            </div>
                                        
                   </div> </div> </div>
                   

