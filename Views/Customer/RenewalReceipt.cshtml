@model IEnumerable<ODHDEVELOPERS.Models.Installment>
@using ODHDEVELOPERS.Models;
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewBag.Title = "RenewalReceipt";
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    var a = 0;
}

<div class="page-content">

                <div class="container" style="height:700px; overflow-y: scroll;">
                    <div class="page-toolbar">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Renewal Report</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                        
                        <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
                               @Convert.ToDateTime(DateTime.Now.Date).ToString("dd/MM/yyyy")
                            </div>
                        </div>           
                        
                    </div>
    
  <div class="row" style="width:100%">
                        <div class="col-md-6" style="width:100%">
                           
   <div>&nbsp;&nbsp;<a href="@Url.Action("PrintRenewalReceipt")" target="_blank">Get Report In PDF</a></div>  
                            
                           

   

                            <div class="block" >
                               
                                <div class="block-content controls" >
                              
    
                                         <div id="1">
<table border="1" style="margin-left:1%; margin-right:1px; margin-bottom:30px;width:98%;">
    
   
                    @foreach (var item in Model)
                    {
                        if (a == 0)
                        {
                            
                            
                            <tr style="font-size:13px;color:#2192d6;font-weight:100">
                                <th colspan="6" ><b>&nbsp;Renewal List</b></th>
                                <th colspan="4" ><b>&nbsp; @Convert.ToDateTime(DateTime.Now.Date).ToString("dd/MM/yyyy")</b></th>
                            </tr>
                            
                            
    <tr>
        <th style="width:5%;text-align:center;">
           <label ><b>S.N.</b></label>
            </th>
        <th style="width:10%;text-align:center;">
           <label ><b>Account Code</b></label>
            </th>
        
        <th style="width:15%;text-align:center;">
           <label ><b>Receipt No.</b></label>
        </th>
            
        <th style="width:10%;text-align:center;">
           <label ><b>Date</b></label>
        </th>
            
          <th style="width:10%;text-align:center;">
           <label><b>Amount</b></label>
        </th>
        
        
         <th style="width:10%;text-align:center;">
           <label><b>Install. No.</b></label>
        </th>  
          
        <th style="width:5%;text-align:center;">
           <label><b>Year </b></label>
        </th>

        <th style="width:10%;text-align:center;">
           <label ><b>@mr.planname</b></label>
        </th>
         
        <th style="width:5%;text-align:center;">
        <label><b>Mode</b></label>
        </th>

         <th style="width:5%;text-align:center;">
        <label ><b>Term</b></label>
        </th>

    </tr>
    }
                        a = a + 1;


    <tr style="text-align:center;">
        <td>
            @a
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Account_Code)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.rcptno)
        </td>
        
        <td>
            @Convert.ToDateTime(item.paymentdate).ToString("dd/MM/yyyy")
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.amount)
        </td>
       
          <td>
            @Html.DisplayFor(modelItem => item.installno)
        </td>
        
         <td>
            @Html.DisplayFor(modelItem => item.year)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Planname)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.mode)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.Term)
        </td>
      
    </tr>
                   
    }

    
    
    
   
</table>
              </div> 
        </div>
        </div>

                            </div>
                          </div>   
                    

                     
                    </div>

    </div>









