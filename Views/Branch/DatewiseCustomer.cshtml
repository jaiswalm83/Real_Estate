@model IEnumerable<ODHDEVELOPERS.Models.DatewiseCustomerList>
@using ODHDEVELOPERS.Models
@{
    ViewBag.Title = "DatewiseCustomer";
    Layout = "~/Views/Shared/_BranchLayout.cshtml";
    var a = 0;
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(c => c.Id == 1);
    var br = db.Branchtabs.Single(b => b.BranchCode == User.Identity.Name);
}

<div class="page-content">

    <div class="container" id="divid">

        <div class="page-toolbar">

            <div class="page-toolbar-block">
                <div class="page-toolbar-title">Datewise @mr.custname</div>
                <div class="page-toolbar-subtitle"></div>
            </div>
            <div class="page-toolbar-block pull-right">
            </div>

            <div class="row" style="width: 100%">
                <div class="col-md-6" style="width: 100%">

                    <div class="block" style="width: 100%">
                        <div class="block-content controls">
                            @using (Html.BeginForm())
                            {
                                <div class="row-form">


                                    <div class="col-md-9">



                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <label class="width">Start Date</label></span>
                                            <input type="date" class="form-control" name="sdate" required>
                                        </div>


                                    </div>



                                </div>
                                   
                                <div class="row-form">


                                    <div class="col-md-9">

                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <label class="width">End Date</label></span>
                                            <input type="date" class="form-control" name="edate" required>
                                        </div>




                                    </div>
                                </div>

                                <div class="page-toolbar-block pull-right">
                                    <div class="widget-info widget-from">

                                        <button class="btn btn-primary"><i class="fa fa-cog"></i>Search</button>

                                    </div>
                                </div>
                               }




                        </div>

                    </div>
                </div>
            </div>
        </div>



       <table border="1" style="margin-left: 1%; margin-right: 1px; margin-bottom: 30px; width: 98%;">

            @using (Html.BeginForm())
            {
                foreach (var item in Model)
                {
                    if (a == 0)
                    {
                            
                <tr>
                    <th colspan="4" style="text-align: center;">@mr.branchname Name:@br.BranchName</th>
                    <th colspan="4" style="text-align: center;"><b>@mr.custname List</b></th>
                    <th colspan="4" style="text-align: center;"><b>Dated:@DateTime.Now.Date.ToString("dd/MM/yyyy")</b></th>
                </tr>
                <tr>
                    <th style="width: 5%; text-align: center;">
                        <label id="sn"><b>S.N.</b></label>
                    </th>
                    <th style="width: 10%; text-align: center;">
                        <label id="newid"><b>@mr.custname Id</b></label>
                    </th>

                    <th style="width: 10%; text-align: center;">
                        <label id="introducerid"><b>Name</b></label>
                    </th>

                    <th style="width: 10%; text-align: center;">
                        <label id="spilid"><b>Introducer Id</b></label>
                    </th>
                    <th style="width: 10%; text-align: center;">
                        <label id="position"><b>@mr.planname Name</b></label>
                    </th>
                    <th style="width: 10%; text-align: center;">
                        <label><b>Booking Amount</b></label>
                    </th>
                     <th style="width: 8%; text-align: center;">
                        <label><b>Adv.Payment</b></label>
                    </th>
                     <th style="width: 8%; text-align: center;">
                        <label><b>Plot Size</b></label>
                    </th>
                    <th style="width: 8%; text-align: center;">
                        <label id="doj"><b>Payment </b></label>
                    </th>
                    <th style="width: 8%; text-align: center;">
                        <label id="Mode"><b>Mode</b></label>
                    </th>
                    <th style="width: 8%; text-align: center;">
                        <label id="email"><b>Mobile No</b></label>
                    </th>

                    <th style="width: 7%; text-align: center;">
                        <label id="dojh"><b>Date of Joining</b></label>
                    </th>

                </tr>
                    }
                    a = a + 1;


                <tr style="text-align: left;">
                    <td>
                        @a
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.newbondid)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.newintroducerid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.planname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.bookingamount)
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem => item.downpayment)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.plotsize)
                        </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.payment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.mode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>
                    <td>
                        @Convert.ToDateTime(item.formdate).ToString("dd/MM/yyyy")
                    </td>


                </tr>
                   
                }

            }



        </table>

        @if (a > 0)
        {
            <a href="@Url.Action("PrintDatewiseCustomer")" target="_blank">Get Report In PDF</a>
        }





    </div>

</div>











