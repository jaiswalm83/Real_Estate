@model IEnumerable<ODHDEVELOPERS.Models.MaturityPaid>
    @using ODHDEVELOPERS.Models
    @{
        Layout = "~/Views/Shared/_BranchLayout.cshtml";
        ViewBag.Title = "MaturityPaidDetails";
        UsersContext db = new UsersContext();
        var mr = db.Members.Single(m => m.Id == 1);
        var a = 0;
        var plan1 = db.Plans.Single(p1 => p1.Plancode == 1);
        var plan2 = db.Plans.Single(p2 => p2.Plancode == 2);
        var br = db.Branchtabs.Single(o => o.BranchCode == User.Identity.Name);
        Double payment = 0, nolandunit = 0, totalcon = 0, expectedraisablevalue = 0, maturityamount = 0, total = 0, gtotal = 0;

    }
    <div class="container mt-5 FormContainer">
        <h2 class="text-center mb-4">Maturity Paid Details</h2>
        <form id="maturityPaidForm" class="border p-4 rounded shadow formtag">

            <!-- Start Date Field -->
            <div class="mb-3">
                <label for="startDate" class="form-label formLabel">Start Date:</label>
                <!-- Corrected id, name, and removed placeholder (not needed for date input) -->
                <input type="date" class="form-control formInput" id="startDate" name="startDate" required>
            </div>

            <!-- End Date Field -->
            <div class="mb-3">
                <label for="endDate" class="form-label formLabel">End Date:</label>
                <!-- Corrected id, name, and removed placeholder -->
                <input type="date" class="form-control formInput" id="endDate" name="endDate" required>
            </div>

            <!-- View Button -->
            <div class="text-center d-grid gap-2">
                <button type="submit" class="btn btn-lg formButton">View</button>
            </div>
        </form>
    </div>

    <script src="~/Scripts/print.js" type="text/javascript"></script>
    <div class="page-content">

        <div class="container" id="divid1">
            <div class="page-toolbar" id="2">

                <div class="page-toolbar-block">
                    <div class="page-toolbar-title">Maturity Paid Details</div>
                    <div class="page-toolbar-subtitle"></div>
                </div>

            </div>

            @using (@Html.BeginForm())
            {
                <div class="row" id="hide">
                    <div class="col-md-6" style="width:100%">

                        <div class="block">

                            <div class="block-content controls">
                                <div class="row-form">
                                    <div class="input-group" style="margin-left:1%;margin-right:1%;">
                                        <span class="input-group-addon"><label class="width">Start Date</label></span>
                                        <input type="text" id="paymentdat" class="form-control datepicker" required name="sdate" />

                                    </div>
                                </div>

                                <div class="row-form">
                                    <div class="input-group" style="margin-left:1%;margin-right:1%;">
                                        <span class="input-group-addon"><label class="width">End Date</label></span>
                                        <input type="text" id="paymentdat1" class="form-control datepicker" required name="edate" />

                                    </div>
                                </div>


                                <div class="row-form" style="width:100%">
                                    <div class="col-md-9">
                                        <button id="submit" value="Search" class="btn btn-primary pull-right" type="submit">View</button>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            }

            <table border="1" style="margin-left:1%; margin-right:1px; width:98%; margin-bottom:70px; ">
                @using (Html.BeginForm())
                {
                    foreach (var item in Model)
                    {
                        if (a == 0)
                        {
                            <tr>
                                <th colspan="5" style="text-align:center;">@mr.branchname Name:@br.BranchName</th>
                                <th colspan="5" style="text-align:center;"><b>Maturity Paid Details</b></th>
                                <th colspan="6" style="text-align:center;"><b>Duration:@item.sdate.ToString("dd/MM/yyyy")-@item.edate.ToString("dd/MM/yyyy")</b></th>
                            </tr>

                            <tr>
                                <th style="width:3%;text-align:center;">
                                    <label id="sn"><b>S.N.</b></label>
                                </th>
                                <th style="width:13%;text-align:center;">
                                    <label id="option"><b>@mr.custname Id</b></label>
                                </th>
                                <th style="width:10%;text-align:center;">
                                    <label id="planname"><b>Name</b></label>
                                </th>

                                <th style="width:9%;text-align:center;">
                                    <label id="term_plan"><b>Introducer Id</b></label>
                                </th>

                                <th style="width:8%;text-align:center;">
                                    <label id="mode"><b>@mr.planname</b></label>
                                </th>

                                <th style="width:8%;text-align:center;">
                                    <label id="amount"><b>Term</b></label>
                                </th>


                                <th style="width:8%;text-align:center;">
                                    <label id="latefine"><b>Mode</b></label>
                                </th>

                                <th style="width:9%;text-align:center;">
                                    <label id="payamount3"><b>Expiry Date</b></label>
                                </th>


                                <th style="width:9%;text-align:center;">
                                    <label id="maturitydate1"><b>Expected Date</b></label>
                                </th>
                                <th style="width:9%;text-align:center;">
                                    <label id="maturitydate22"><b>Payment Date</b></label>
                                </th>
                                <th style="width:9%;text-align:center;">
                                    <label id="maturitydate21"><b>Pay Method</b></label>
                                </th>

                                <th style="width:9%;text-align:center;">
                                    <label id="maturitydate25"><b>Check or DD No.</b></label>
                                </th>
                                <th style="width:9%;text-align:center;">
                                    <label id="maturitydate23"><b>Cheque Date</b></label>
                                </th>
                                <th style="width:9%;text-align:center;">
                                    <label id="maturitydate24"><b>Branch Name</b></label>
                                </th>


                                <th style="width:8%;text-align:center;">
                                    <label id="payamount1"><b>Maturity Amount</b></label>
                                </th>

                                <th style="width:8%;text-align:center;">
                                    <label id="payamount"><b>Pay Amount </b></label>
                                </th>
                            </tr>
                        }
                        a = a + 1;


                        <tr style="text-align:center;">
                            <td>
                                @a
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.newbondid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.newintroducerid)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.planname)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.term)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.mode)
                            </td>

                            <td>@item.expirydate.ToString("dd/MM/yyyy")</td>

                            <td>@item.exptdate.ToString("dd/MM/yyyy")</td>
                            <td>@item.paytdate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.paymethod)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.checkdd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.chequedate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.branchpay)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.expectedraisablevalue)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.maturityamount)
                            </td>
                        </tr>
                        //payment = payment + Convert.ToDouble(item.payment);
                        //totalcon = totalcon + Convert.ToDouble(item.totalcon);
                        expectedraisablevalue = expectedraisablevalue + Convert.ToDouble(item.expectedraisablevalue);
                        maturityamount = maturityamount + Convert.ToDouble(item.maturityamount);




                    }
                    if (a > 0)
                    {
                        <tr style="text-align:center;">


                            <td colspan="14">
                                <b>GRAND TOTAL:</b>
                            </td>


                            <td>
                                <b> @expectedraisablevalue</b>

                            </td>
                            <td>
                                <b> @maturityamount</b>
                            </td>


                        </tr>
                    }

                }




            </table>
            @if (a > 0)
            {
                <a href="@Url.Action("PrintMaturityPaidDetails")" target="_blank">Get Report In PDF</a>
            }



        </div>
    </div>

