        </div>
        <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-3">
            <a href="~/Branch/UpdateCustomer" class="card custom-card text-center h-100">
                <div class="card-body">
                    <img src="~/ManagerAssets/images/logo/mobile.png" class="imageSize img-fluid" alt="Customer Mobile No" />
                    <h6 class="card-title mt-1 mb-0">@mr.custname Mobile No</h6>
                </div>
            </a>
        </div>
        <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-3">
            <a href="~/Branch/AgentKYC" class="card custom-card text-center h-100">
                <div class="card-body">
                    <img src="~/ManagerAssets/images/logo/kyc.png" class="imageSize img-fluid" alt="Agent KYC" />
                    <h6 class="card-title mt-1 mb-0">Agent KYC</h6>
                </div>
            </a>
