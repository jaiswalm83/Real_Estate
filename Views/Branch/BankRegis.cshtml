@model IEnumerable<ODHDEVELOPERS.Models.DatewiseCustomerList>
@using ODHDEVELOPERS.Models;
@{
    ViewBag.Title = "BankRegis";
    Layout = "~/Views/Shared/_BranchLayout.cshtml";
    int a = 0;
    DateTime bday = DateTime.Now.Date.AddDays(-1);
    DateTime tday = DateTime.Now.Date;
}

<div class="page-content">

    <div class="container">
        <div class="page-toolbar">

            <div class="page-toolbar-block">
                <div class="page-toolbar-title">Bank Transaction Report</div>
                <div class="page-toolbar-subtitle"></div>
            </div>

            <div class="page-toolbar-block pull-right">
            </div>

        </div>

          @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-md-6" style="width: 98%">

                    <div class="block">

                        <div class="block-content controls">
                            <div class="row-form">
                                <div class="col-md-12">
                                       <div class="col-md-4">
                                <div class="input-group" style="margin-left: 1%; margin-right: 1%;">
                                    <input type="radio" value="@bday"  name="sdate" />
                                        <label class="width" style="margin-left:3px;">Before One Day</label>
                                    </div>
                                           </div>
                                       <div class="col-md-4">
                                     <div class="input-group" style="margin-left: 1%; margin-right: 1%;">
                                   <input type="radio" value="@tday"  name="sdate" />    
                                     <label class="width" style="margin-left:3px;">Current Day</label>
                                   </div>
                                           </div>
                                     
                                <div class="col-md-4">
                                    <button id="submit" value="Search" class="btn btn-primary" type="submit">View</button>
                                </div>
                          
</div>
                                
                            </div>
                            
                           
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="row" >
            <div class="col-md-6" style="width: 98%">

                <table border="1" style="margin-left: 1%; margin-right: 1px; margin-bottom: 30px; width: 100%;">
                    @using (Html.BeginForm())
                    {
                        foreach (var item in Model)
                        {
                            if (a == 0)
                            {
                        <tr>
                            
                    <th colspan="4"><b> <a href="@Url.Action("PrintBankTransRegis")" target="_blank">Get Report In PDF</a></b></th>
              
                            <th colspan="4"><b>Dated:@item.sdate.ToString("dd/MM/yyyy")</b></th>
                        </tr>
                        <tr>
                            <th style="width: 5%; text-align: center;">
                                <label id="sn"><b>S.N.</b></label>
                            </th>
                            <th style="width: 10%; text-align: center;">
                                <label id="newid"><b>Bank Name</b></label>
                            </th>

                            <th style="width: 10%; text-align: center;">
                                <label id="introducerid"><b>Account no</b></label>
                            </th>

                            <th style="width: 10%; text-align: center;">
                                <label id="spilid"><b>Transaction Type</b></label>
                            </th>
                          <th style="width: 8%; text-align: center;">
                                <label id="doj"><b>Transaction Id</b></label>
                            </th>
                                 <th style="width: 8%; text-align: center;">
                                <label id=""><b>Amount</b></label>
                            </th>
                            <th style="width: 8%; text-align: center;">
                                <label id="pay"><b>Transaction Date </b></label>
                            </th>
                            
                        </tr>
                            }
                            a = a + 1;


                        <tr style="text-align: center;">
                            <td>
                                @a
                            </td>
                             <td>
                                @Html.DisplayFor(modelItem => item.newintroducerid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.newbondid)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.branch)
                            </td>
                               <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.payment)
                            </td>
                           
                            <td>
                                @Convert.ToDateTime(item.formdate).ToString("dd/MM/yyyy")

                            </td>
                          
                        </tr>
                   
                        }

                    }
                </table>
               
            </div>
        </div>

    </div>
</div>
