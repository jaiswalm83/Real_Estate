@model IEnumerable<ODHDEVELOPERS.Models.DealSheet>
@using ODHDEVELOPERS.Models;
@{
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);

    var br = db.Branchtabs.Single(o => o.BranchCode == User.Identity.Name);
    Layout = "~/Views/Shared/_BranchLayout.cshtml";
    ViewBag.Title = "BrokerListReport";
    var a = 1;
    
}



<div class="page-content">

    <div class="container" id="divid1">
        <div class="page-toolbar" id="2">

            <div class="page-toolbar-block">
                <div class="page-toolbar-title">Deal List</div>
                <div class="page-toolbar-subtitle"></div>
            </div>

            <div class="page-toolbar-block pull-right">
            </div>

        </div>


        <div class="row" id="hide">
            <div class="col-md-6" style="width: 100%">
            </div>
        </div>



        <div id="1">
            <table border="1" style="margin-left: 1%; margin-right: 1px; width: 98%;">


                <tr>
                    <th colspan="3">@mr.branchname Name:@br.BranchName</th>
                    <th colspan="3"><b>Deal List</b></th>
                    <th colspan="3"><b>@Convert.ToDateTime(DateTime.Now.Date).ToString("dd/MM/yyyy")</b></th>
                    <th colspan="3"></th>
                </tr>
                <tr>
                    <th style="width: 5%; text-align: center;">
                        <label id="sn"><b>S.N.</b></label>
                    </th>
                    <th style="width: 20%; text-align: center;">
                        <label id="newidd"><b>Deal Id</b></label>
                    </th>
                    <th style="width: 20%; text-align: center;">
                        <label id="newid"><b>Customer Name</b></label>
                    </th>
                    <th style="width: 20%; text-align: center;">
                        <label id="spilid"><b>Introducer Name</b></label>
                    </th>
                    <th style="width: 20%; text-align: center;">
                        <label id="pass"><b>Customer Mobile No.</b></label>
                    </th>
                    <th style="width: 10%; text-align: center;">
                        <label id="email"><b>Total Unit Cost </b></label>
                    </th>

                    <th style="width: 10%; text-align: center;">
                        <label id="doj"><b>Date of Joining</b></label>
                    </th>
                    <th style="width: 15%; text-align: center;">
                        <label id="position"><b>Valid Date</b></label>
                    </th>
                    <th style="width: 15%; text-align: center;">
                        <label id="action"><b>Action</b></label>
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                      


                    <tr style="text-align: left;">
                        <td>
                            @a
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.userid)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.customername)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.introname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.mobile)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.totalunitcost)
                        </td>
                        <td>
                            @Convert.ToDateTime(item.doj).ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.validdate)
                        </td>

                        <td><a href="/Branch/DealSheetShow?userid=@item.userid" class="btn btn-success btn-sms" >Show</a>
                        </td>

                    </tr>
                    a = a + 1;
                }
            </table>
           @* @if (a > 0)
            {
                <a href="@Url.Action("PrintDealSheetreport")" target="_blank">Get Report In PDF</a>
            }*@
        </div>
    </div>
</div>

