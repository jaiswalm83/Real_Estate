@model IEnumerable<ODHDEVELOPERS.Models.DatewiseDueCollection>
@using ODHDEVELOPERS.Models
@{
    ViewBag.Title = "DWDueCollection";
    Layout = "~/Views/Shared/_BranchLayout.cshtml";
    var a = 0;
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(c => c.Id == 1);
    
}


<link href="~/Content/datepicker/jquery.datepick.css" rel="stylesheet">
<script src="~/Content/datepicker/jquery.plugin.js"></script>
<script src="~/Content/datepicker/jquery.datepick.js"></script>
<script>
    $(function () {
        $('#date').datepick();
        
    });

   
</script>

<div class="page-content">

    <div class="container" id="divid">

        <div class="page-toolbar">

            <div class="page-toolbar-block">
                <div class="page-toolbar-title">Datewise Due Collection</div>
                <div class="page-toolbar-subtitle"></div>
            </div>
            <div class="page-toolbar-block pull-right">
            </div>

            <div class="row" style="width: 100%">
                <div class="col-md-6" style="width: 100%">

                    <div class="block" style="width: 100%">
                        <div class="block-content controls">
                            @using (Html.BeginForm())
                            {
                                <div class="row-form">

                                    <div class="col-md-9">

                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <label class="width">Select Date</label></span>
                                            <input type="text" class="form-control" id="date" name="date" required>
                                        </div>


                                    </div>

                                </div>
                                   
                                <div class="page-toolbar-block pull-right">
                                    <div class="widget-info widget-from">

                                        <button class="btn btn-primary"><i class="fa fa-cog"></i>Search</button>

                                    </div>
                                </div>
                               }




                        </div>

                    </div>
                </div>
            </div>
        </div>



        <table border="1" style="margin-left: 1%; margin-right: 1px; margin-bottom: 30px; width: 98%;">

            @using (Html.BeginForm())
            {
                foreach (var item in Model)
                {
                    if (a == 0)
                    {
                            
                <tr>

                    <th colspan="9">
                        <a href="@Url.Action("PrintDWDueCollection")" target="_blank">Get Report In PDF</a>
                    </th>


                </tr>
                            
                <tr>

                    <th colspan="5" style="text-align: center;"><b>Datewise Due Collection</b></th>
                    <th colspan="4" style="text-align: center;"><b>Dated:@DateTime.Now.Date.ToString("dd/MM/yyyy")</b></th>
                </tr>
                <tr>
                    <th style="width: 5%; text-align: center;">
                        <label id="sn"><b>S.N.</b></label>
                    </th>
                    <th style="width: 10%; text-align: center;">
                        <label id="newid"><b>@mr.custname Id</b></label>
                    </th>

                    <th style="width: 10%; text-align: center;">
                        <label id="name"><b>Name</b></label>
                    </th>

                    <th style="width: 10%; text-align: center;">
                        <label id="introducerid"><b>Introducer Id</b></label>
                    </th>

                    <th style="width: 10%; text-align: center;">
                        <label><b>Mobile No</b></label>
                    </th>
                    <th style="width: 10%; text-align: center;">
                        <label id="position"><b>Branch </b></label>
                    </th>


                    <th style="width: 10%; text-align: center;">
                        <label id="Installments"><b>Due Installments</b></label>
                    </th>
                    <th style="width: 10%; text-align: center;">
                        <label id="Amount"><b>Amount</b></label>
                    </th>

                    <th style="width: 10%; text-align: center;">
                        <label id="doj"><b>Date Of Joining </b></label>
                    </th>

                </tr>
            }
            a = a + 1;


                <tr style="text-align: left;">
                    <td>
                        @a
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.newbondid)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.newintroducerid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.companyname
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.branchname)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.installment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.amount)
                    </td>
                    <td>
                        @Convert.ToDateTime(item.formdate).ToString("dd/MM/yyyy")
                    </td>


                </tr>
                   
        }

    }



        </table>


    </div>

</div>













