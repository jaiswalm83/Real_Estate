@model IEnumerable<ODHDEVELOPERS.Models.SelfdueCollection>
    @using ODHDEVELOPERS.Models;
    @{
        Layout = "~/Views/Shared/_BranchLayout.cshtml";
        ViewBag.Title = "BrokerSelfDueCollection";

        UsersContext db = new UsersContext();
        var mr = db.Members.Single(m => m.Id == 1);
        var a = 0;
        var br = db.Branchtabs.Single(o => o.BranchCode == User.Identity.Name);
    }

    <script type="text/javascript">
        $(document).ready(function () {
            $("#newagentid").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/Admin/AutoCompleteAgentid",
                        type: "POST",
                        dataType: "json",
                        data: { term: request.term },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.name, value: item.NewAgentId };
                            }))

                        }
                    })
                },
                messages: {
                    noResults: "", results: ""
                }
            });
        })
    </script>

    <div class="container mt-4 FormContainer">
        <h2 class="text-center mb-4">@mr.agentname Self Due Collection</h2>
        <div class="border p-4 rounded shadow formtag">
            @using (Html.BeginForm())
            {
                <!-- Project Year -->
                <div class="mb-3">
                    <label for="year" class="form-label formLabel">Enter @mr.agentname Id:</label>
                    <input type="text" id="newagentid" class="form-control formInput" required name="newagentid">
                </div>

                <!-- Create Button -->
                <div class="text-center d-grid gap-2">
                    <button type="submit" class="btn btn-lg formButtom"> <i class="fa fa-search"></i>Search</button>
                </div>
            }
        </div>
        <table class=" mt-3">
            @foreach (var item in Model)
            {
                if (a == 0)
                {   
                    <thead>
                        <tr>
                            <th colspan="3" class="header-row" style="border-radius: 8px 0 0 0;">@mr.branchname Name:@item.branchname</th>
                            <th colspan="3" class="header-row" style="border-radius: 0px;">@mr.agentname Self Due Collection</th>
                            <th colspan="4" class="header-row" style="border-radius: 0 8px 0 0;">Dated:@Convert.ToDateTime(DateTime.Now.Date).ToString("dd/MM/yyyy")</th>

                        </tr>
                        <tr>
                            <th colspan="5"><b>@mr.agentname Id:@item.newagentid </b></th>
                            <th colspan="5"> <b>@mr.agentname Name:@item.name</b></th>
                        </tr>
                        <tr>
                            <th><label><b>S.N.</b></label></th>
                            <th><label><b>@mr.custname Id</b></label></th>
                            <th><label><b>@mr.custname Name</b></label></th>
                            <th><label><b>Mobile No</b></label></th>
                            <th><label><b>Expiry Date</b></label></th>
                            <th><label><b>@mr.planname Name</b></label></th>
                            <th><label><b>Term </b></label></th>
                            <th><label id="email"><b>Mode</b></label></th>
                            <th><label><b>Amount</b></label></th>
                            <th><label><b>Installment No.</b></label></th>
                        </tr>
                    </thead>
                }
                a = a + 1;
                <tbody>
                    <tr>
                        <td>@a</td>
                        <td>@Html.DisplayFor(modelItem => item.newbondid)</td>
                        <td>@Html.DisplayFor(modelItem => item.cname)</td>
                        <td>@Html.DisplayFor(modelItem => item.mobileno)</td>
                        <td>@Convert.ToDateTime(item.expirydate).ToString("dd/MM/yyyy")</td>
                        <td>@Html.DisplayFor(modelItem => item.planname)</td>
                        <td>@Html.DisplayFor(modelItem => item.term)</td>
                        <td>@Html.DisplayFor(modelItem => item.mode)</td>
                        <td>@Html.DisplayFor(modelItem => item.amount)</td>
                        <td>@Html.DisplayFor(modelItem => item.installmentno)</td>
                    </tr>
                </tbody>
            }
        </table>
        @if (a > 0)
        {
           <a href="@Url.Action("PrintBrokerSelfDueReport")" target="_blank">Get Report In PDF</a>
        }

    </div>

   










