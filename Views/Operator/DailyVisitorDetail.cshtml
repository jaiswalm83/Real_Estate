        function Time() {
            
            
            var a = new Date();
            var b = a.getHours();
            if (a.getHours() > 12) {
                b = a.getHours() - 12;
            }
            
            var t = b + ":" + a.getMinutes() + ":" + a.getSeconds();
            $("#time").val(t).css("padding-left", "30px");

