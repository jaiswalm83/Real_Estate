<script type="text/javascript">
    $(document).ready(function () {
        $('#submit').click(function () {
            @Html.ValidationSummary(true)
        });
    });

    function sentotp() {
        debugger;
        var mobile = $("#rmobile").val();
        if (mobile != "") {
            $("#btnsent").attr('disabled', '');
            $.get('/Operator/getotp', { mobile: mobile }, function (d) {
                debugger;
                if (d > 0) {
                    alert('otp sent to your mobile number, Please verify it soon');
                    $("#otp0").val(d);
                }
                });

        }
    }
    function verify() {
        debugger;

        var otp1 = $("#otp0").val();
        var otp2 = $("#newotp").val();
        if (otp2 != '') {
            $("#btnverify").attr('disabled', '');
            if (otp1 == otp2) {
                alert('otp is match');
                $("#newotp").attr('disabled', '');
            } else {
                alert('Invalid otp...!Please Try Again.');
                $("#btnverify").removeAttr('disabled');
                $("#btnsent").removeAttr('disabled');
            }
        }
    }
</script>

