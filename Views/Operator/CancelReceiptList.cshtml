@model IEnumerable<ODHDEVELOPERS.Models.Cancel_Receipt>
@using ODHDEVELOPERS.Models;
@{    
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    Layout = "~/Views/Shared/_OperatorLayout.cshtml";
    ViewBag.Title = "CancelReceiptList";
    var a = 0;
}


<div class="page-content">
       <div style="margin-left:25px;">
       
           <br />
          <br /> 
         <a href="@Url.Action("PrintCancelReport")">Get Report In PDF</a>
          

      </div>  
                <div class="container" >
                  
<div class="page-toolbar" >
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Cancel Receipt List</div>
                            <div class="page-toolbar-subtitle"> </div>
                        </div>
                               <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
                                <div >                                            
                                <label> @Convert.ToDateTime(DateTime.Now.Date).ToString("dd/MM/yyyy")</label>
                                </div>                            
                            </div>
                        </div>   
   
                        <table border="1" style="margin-left:1%; margin-right:1%; margin-bottom:30px; width:98%;">
   
      @foreach(var item in Model){
        if(a==0)
        {
         
  <tr>
        <th style="width:5%;text-align:center;">
           <label id="sn"><b>Sr.No.</b></label>
            </th>
        <th style="width:9%;text-align:center;">
           <label id="Bond"><b>@mr.custname Id</b></label>
            </th>
      
            
        <th style="width:8%;text-align:center;">
           <label id="payamount"><b> Amount</b></label>
        </th>
            
        <th style="width:8%;text-align:center;">
            <label id="Expiry" ><b>Expiry Date</b></label>
        </th>
            
        <th style="width:8%;text-align:center;">
           <label id="Date"><b>Date</b></label>
        </th>
            <th style="width:9%;text-align:center;">
           <label id="Installment"><b>Installment</b></label>
            </th>
        
        <th style="width:9%;text-align:center;">
           <label id="Plan"><b>@mr.planname Name</b></label>
        </th>
            
        <th style="width:9%;text-align:center;">
           <label id="Term"><b>Term</b></label>
        </th>
            
        <th style="width:9%;text-align:center;">
            <label id="Mode" ><b>Mode</b></label>
        </th>
            
       
       <th style="width:9%;text-align:center;">
           <label id="Cancel"><b>Cancel By</b></label>
        </th>
    </tr>
        }

        a = a + 1;
    <tr style="text-align:center;">
        <td>
            @a
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.newbondid)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.payamount)
        </td>
        
        <td>
             @Convert.ToDateTime(item.expirydate).ToString("dd/MM/yyyy")
        </td>
       
        <td>
             @Convert.ToDateTime(item.paymentdate).ToString("dd/MM/yyyy")
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.installmentno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.planname)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.term)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.mode)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.opid)
        </td>
        
             
    </tr>
    } 
</table>
                    </div> 


                   
      

      
                    </div>


    </div>


