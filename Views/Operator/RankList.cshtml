@model IEnumerable<ODHDEVELOPERS.Models.Ranktab>
    @using ODHDEVELOPERS.Models
    @{
        UsersContext db = new UsersContext();
        var mr = db.Members.Single(m => m.Id == 1);
        Layout = "~/Views/Shared/_OperatorLayout.cshtml";
        ViewBag.Title = "RankList";
        var a = 0;
    }

    <link href="~/assets/css1/main css/Forms.css" rel="stylesheet" />
    <link href="~/assets/css1/main css/index.css" rel="stylesheet" />

   
        <div  id="divid">

           

                <div class="index_body">
                    <div class="table-container">
                        <div class="header-row">@mr.rankname List</div>
                        <table>

                            @foreach (var item in Model)
                            {
                                if (a == 0)
                                {

                                    <thead>
                                        <tr>
                                            <th style="background-color:#ff5722; color:white">
                                                <label id="sn"><b>@mr.rankname No</b></label>
                                            </th>

                                            <th style="background-color:#ff5722; color:white">
                                                <label id="introducerid"><b>@mr.rankname Name</b></label>
                                            </th>

                                            <th style="background-color:#ff5722; color:white">
                                                <label id="Quota"><b>@mr.rankname Shortcut</b></label>
                                            </th>
                                        </tr>
                                    </thead>
                                }

                                a = a + 1;
                                <tbody>
                                    <tr>
                                        <td>
                                            @a
                                        </td>


                                        <td>
                                            @Html.DisplayFor(modelItem => item.RankName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Rankshrtcut)
                                        </td>

                                    </tr>
                                </tbody>
                            }

                        </table>


                        <!-- Create Button -->
                        <div class="text-center d-grid gap-2">

                            <a href="@Url.Action("PrintRank")" target="_blank" class="btn create-btn" style="margin-top:10px">Get Report In PDF</a>
                        </div>

                       








                    </div>


            </div>




